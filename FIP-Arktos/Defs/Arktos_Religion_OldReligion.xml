<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Old world religions -->
    <!--Secular-->
    <MemeDef ParentName="Arktos_Religion_Base">
        <defName>Arktos_Religion_FollowerOfTheApocalypse</defName>
        <label>Follower of the Apocalypse</label>
        <description>A secular movement born from the Old World's collapse; its followers have sworn to help those in need.</description>
        <deityNameMakerOverride>Arktos_NameMaker_FollowerOfTheApocalypse</deityNameMakerOverride>
        <deityTypeMakerOverride>Arktos_TypeMaker_FollowerOfTheApocalypse</deityTypeMakerOverride>
        <worshipRoomLabel>church</worshipRoomLabel>
        <groupDef>Arktos_OldWorldChurch</groupDef>
        <thingStyleCategories>
            <li>
                <category>Christian</category>
                <priority>4</priority>
            </li>
        </thingStyleCategories>
    </MemeDef>
    <RulePackDef>
        <defName>Arktos_NameMaker_FollowerOfTheApocalypse</defName>
        <rulePack>
            <rulesStrings>
                <li>r_deityName->The [adj][name]</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>
    <RulePackDef>
        <defName>Arktos_TypeMaker_FollowerOfTheApocalypse</defName>
        <rulePack>
            <rulesStrings>
                <li>r_deityType->Humanitarian</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>
    <!--Mormon-->
    <MemeDef ParentName="Arktos_Religion_Base">
        <defName>Arktos_Religion_CanaaniteChurch</defName>
        <label>Canaanite Church</label>
        <description>A restorationist movement that mixes frontier theocracy and strict social order, inspired by old doctrinal texts.</description>
        <deityNameMakerOverride>Arktos_NameMaker_CanaaniteChurch</deityNameMakerOverride>
        <deityTypeMakerOverride>Arktos_TypeMaker_CanaaniteChurch</deityTypeMakerOverride>
        <worshipRoomLabel>church</worshipRoomLabel>
        <groupDef>Arktos_OldWorldChurch</groupDef>
        <thingStyleCategories>
            <li>
                <category>Christian</category>
                <priority>4</priority>
            </li>
        </thingStyleCategories>
    </MemeDef>
    <RulePackDef>
        <defName>Arktos_NameMaker_CanaaniteChurch</defName>
        <rulePack>
            <rulesStrings>
                <li>r_deityName -> [m_name_form]</li>
                <li>m_name_form -> The [m_descriptor] [m_name_core]</li>
                <li>m_name_form -> [m_name_prefix] of [m_realm]</li>
                <li>m_name_form -> The [m_name_core] of [m_mystery]</li>
                <li>m_descriptor -> Eternal</li>
                <li>m_descriptor -> Most Exalted</li>
                <li>m_descriptor -> Divine</li>
                <li>m_descriptor -> Infinite</li>
                <li>m_name_core -> Elohim</li>
                <li>m_name_core -> Kolobian Lord</li>
                <li>m_name_core -> God of Glory</li>
                <li>m_name_core -> Father of Worlds</li>
                <li>m_name_prefix -> Lightbearer</li>
                <li>m_name_prefix -> Lord</li>
                <li>m_name_prefix -> Radiance</li>
                <li>m_realm -> Kolob</li>
                <li>m_realm -> the Celestial Plane</li>
                <li>m_realm -> the Starbound Heavens</li>
                <li>m_mystery -> the First Estate</li>
                <li>m_mystery -> Eternal Progression</li>
                <li>m_mystery -> the Sealed Records</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>
    <RulePackDef>
        <defName>Arktos_TypeMaker_CanaaniteChurch</defName>
        <rulePack>
            <rulesStrings>
                <li>r_deityTitle -> [m_title_pattern]</li>
                <li>m_title_pattern -> [m_title_lead] of [m_domain]</li>
                <li>m_title_pattern -> [m_reverent_form], Keeper of [m_secret]</li>
                <li>m_title_pattern -> [m_actioner] of [m_destiny]</li>
                <li>m_title_lead -> Architect</li>
                <li>m_title_lead -> Shepherd</li>
                <li>m_title_lead -> Origin</li>
                <li>m_title_lead -> Builder</li>
                <li>m_domain -> the Celestial Law</li>
                <li>m_domain -> Divine Order</li>
                <li>m_domain -> Zion Restored</li>
                <li>m_reverent_form -> The Great One</li>
                <li>m_reverent_form -> Holy Progenitor</li>
                <li>m_reverent_form -> The First Light</li>
                <li>m_secret -> the Sealed Plates</li>
                <li>m_secret -> the Eternal Genealogy</li>
                <li>m_secret -> Sacred Ordinances</li>
                <li>m_actioner -> Giver</li>
                <li>m_actioner -> Guardian</li>
                <li>m_actioner -> Witness</li>
                <li>m_destiny -> Divine Exaltation</li>
                <li>m_destiny -> the Final Judgement</li>
                <li>m_destiny -> the Eternal Inheritance</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>
    <!--Protestant-->
