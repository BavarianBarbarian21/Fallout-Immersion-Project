	<!--Karma-->
	<MemeDef ParentName="Arktos_Religion_Spiritual_Base">
		<defName>Arktos_Religion_Karma</defName>
		<label>Karma</label>
		<description>An order devoted to the law of Karma — the eternal cycle of cause and
			consequence.
			Through mindful action and reflection, followers seek to purify their deeds and restore
			harmony
			to the world’s moral balance after the collapse of civilisation.</description>
		<deityNameMakerOverride>Arktos_NameMaker_Karma</deityNameMakerOverride>
		<deityTypeMakerOverride>Arktos_TypeMaker_Karma</deityTypeMakerOverride>
		<thingStyleCategories>
			<li>
				<category>Hindu</category>
				<priority>4</priority>
			</li>
		</thingStyleCategories>
	</MemeDef>

	<RulePackDef>
		<defName>Arktos_NameMaker_Karma</defName>
		<rulePack>
			<rulesStrings>
				<li>r_deityName -> [k_name_Religion]</li>

				<li>k_name_Religion -> [k_prefix] [k_deity_core]</li>
				<li>k_name_Religion -> The [k_virtue] Judge</li>
				<li>k_name_Religion -> [k_deity_core] of [k_realm]</li>
				<li>k_name_Religion -> [k_epithet] of the [k_aspect]</li>

				<li>k_prefix -> Mahā</li>
				<li>k_prefix -> Sri</li>
				<li>k_prefix -> Dharma</li>
				<li>k_prefix -> Shakti</li>

				<li>k_deity_core -> Karmadeva</li>
				<li>k_deity_core -> Niyati</li>
				<li>k_deity_core -> Vidya</li>
				<li>k_deity_core -> Shanta</li>

				<li>k_virtue -> just</li>
				<li>k_virtue -> impartial</li>
				<li>k_virtue -> inexorable</li>
				<li>k_virtue -> radiant</li>

				<li>k_realm -> Samsāra</li>
				<li>k_realm -> the Cycle</li>
				<li>k_realm -> the Weighing Hall</li>
				<li>k_realm -> the River of Deeds</li>

				<li>k_epithet -> balance-keeper</li>
				<li>k_epithet -> weaver of fates</li>
				<li>k_epithet -> mirror of souls</li>

				<li>k_aspect -> returning path</li>
				<li>k_aspect -> unseen current</li>
				<li>k_aspect -> scales of truth</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>

	<RulePackDef>
		<defName>Arktos_TypeMaker_Karma</defName>
		<rulePack>
			<rulesStrings>
				<li>r_deityType -> [k_title_Religion]</li>

				<li>k_title_Religion -> [k_role] of [k_principle]</li>
				<li>k_title_Religion -> keeper of [k_cycle]</li>
				<li>k_title_Religion -> the [k_quality] arbiter</li>

				<li>k_role -> judge</li>
				<li>k_role -> preserver</li>
				<li>k_role -> redeemer</li>
				<li>k_role -> weaver</li>

				<li>k_principle -> Karma</li>
