   <!-- Abstract parent for Arktos structure memes -->
  <MemeDef Name="Arktos_StructureOriginBase" Abstract="True">
    <category>Structure</category>
    <iconPath>Arktos/Structure</iconPath>
    <impact>0</impact>
    <deityCount>1</deityCount>
    <!--<symbolPackOverride>true</symbolPackOverride>-->
    <descriptionMaker>
      <patterns>
        <li><def>Arktos_StructureOriginStory</def></li>
      </patterns>
    </descriptionMaker>
    <generalRules>
      <rulesStrings>
        <li>memeAdjective->ADJECTIVEPLACEHOLDER</li>
        <li>memeLeaderNoun->LEADERNOUNPLACEHOLDER</li>
        <li>memeMoralist->MORALISTPLACEHOLDER</li>
      </rulesStrings>
    </generalRules>
  </MemeDef>

  <!-- Democratic -->
  <MemeDef ParentName="Arktos_GovernmentBase">
    <defName>Arktos_Government_Democratic</defName>
    <label>Democratic City-State</label>
    <description>A democratic government inspired by NCR and prewar city-states, with elected councils, traders, and wild west caravans.</description>
    <groupDef>Arktos_Democratic</groupDef>
  </MemeDef>

  <!-- Despotic -->
  <MemeDef ParentName="Arktos_GovernmentBase">
    <defName>Arktos_Government_Despotic</defName>
