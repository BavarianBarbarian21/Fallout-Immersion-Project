<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- New world religions -->
     <!--Children of Atom-->
	<MemeDef ParentName="Arktos_Structure_Base">
		<defName>Arktos_Structure_ChildrenOfAtom</defName>
		<label>Church of the Children of Atom</label>
		<description>A new cult that treats radiation and atomic remnants as sacred, with ritualised exposure and offerings.</description>
		<deityNameMakerOverride>Arktos_NameMaker_ChildrenOfAtom</deityNameMakerOverride>
		<deityTypeMakerOverride>Arktos_TypeMaker_ChildrenOfAtom</deityTypeMakerOverride>
		<worshipRoomLabel>church</worshipRoomLabel>
		<groupDef>Arktos_NewWorldChurch</groupDef>
		<thingStyleCategories>
			<li>
				<category>Morbid</category>
				<priority>4</priority>
			</li>
		</thingStyleCategories>
	</MemeDef>
	<RulePackDef>
		<defName>Arktos_NameMaker_ChildrenOfAtom</defName>
		<rulePack>
			<rulesStrings>
<li>r_deityName -> [f_atom_name]</li>

<li>f_atom_name -> The [f_atom_adj] Atom</li>
<li>f_atom_name -> Atom of the [f_atom_aspect]</li>
<li>f_atom_name -> The [f_atom_noun]</li>
<li>f_atom_name -> The [f_atom_adj] Core</li>

<li>f_atom_adj -> Glowing</li>
<li>f_atom_adj -> Radiant</li>
<li>f_atom_adj -> Eternal</li>
<li>f_atom_adj -> Burning</li>

<li>f_atom_aspect -> Glow</li>
<li>f_atom_aspect -> Fallout</li>
<li>f_atom_aspect -> Division</li>

<li>f_atom_noun -> Divine Spark</li>
<li>f_atom_noun -> Glowing Flame</li>
<li>f_atom_noun -> Sacred Fission</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>
	<RulePackDef>
		<defName>Arktos_TypeMaker_ChildrenOfAtom</defName>
		<rulePack>
			<rulesStrings>
<li>r_deityTitle -> [f_atom_title]</li>

<li>f_atom_title -> [f_atom_role] of [f_atom_domain]</li>
<li>f_atom_title -> The [f_atom_quality] [f_atom_role]</li>
<li>f_atom_title -> Keeper of the [f_atom_secret]</li>

<li>f_atom_role -> Voice</li>
<li>f_atom_role -> Prophet</li>
<li>f_atom_role -> Flame</li>
<li>f_atom_role -> Herald</li>

<li>f_atom_domain -> the Glow</li>
<li>f_atom_domain -> the Bomb</li>
<li>f_atom_domain -> Atomic Divisions</li>

<li>f_atom_quality -> Radiant</li>
<li>f_atom_quality -> Glorious</li>
<li>f_atom_quality -> Burning</li>

<li>f_atom_secret -> Sacred Core</li>
<li>f_atom_secret -> Eternal Fusion</li>
<li>f_atom_secret -> Hidden Fission</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>
