<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- Syncretic, Native, Dharma -->
	 <MemeDef ParentName="Arktos_Religion_Base" Abstract="true">
		<defName>Arktos_Religion_Spiritual</defName>
		<worshipRoomLabel>grove</worshipRoomLabel>
		<groupDef>Arktos_Spiritual</groupDef>
		<symbolPackOverride>true</symbolPackOverride>
        <symbolPacks>
            <li><ideoName>People</ideoName><adjective>People</adjective><member>People</member><prefix>true</prefix></li>
			<li><ideoName>Nation</ideoName><adjective>Nation</adjective><member>Nation</member><prefix>true</prefix></li>
			<li><ideoName>Tribe</ideoName><adjective>Tribe</adjective><member>Tribe</member><prefix>true</prefix></li>	
        </symbolPacks>
				<thingStyleCategories>
			<li>
				<category>Totemic</category>
				<priority>4</priority>
			</li>
		</thingStyleCategories>
	</MemeDef>

     <!--Syncretic-->
	<MemeDef ParentName="Arktos_Religion_Spiritual">
		<defName>Arktos_Religion_Syncretic</defName>
		<label>Father of the Cave</label>
		<description>A believe mixing elements of Christianity with tribal spirit worship.</description>
		<deityNameMakerOverride>Arktos_NameMaker_Syncretic</deityNameMakerOverride>
		<deityTypeMakerOverride>Arktos_TypeMaker_Syncretic</deityTypeMakerOverride>
	</MemeDef>
	
	<RulePackDef>
		<defName>Arktos_NameMaker_Syncretic</defName>
		<rulePack>
			<rulesStrings>
				<li>r_deityName -> [s_name_form]</li>

				<li>s_name_form -> The [s_quality] [s_nature_deity]</li>
				<li>s_name_form -> [s_christ_title] of [s_elemental_force]</li>
				<li>s_name_form -> the spirit of [s_animal_or_tree]</li>
				<li>s_name_form -> [s_animal_or_tree], vessel of the [s_quality]</li>

				<li>s_quality -> radiant</li>
				<li>s_quality -> sacred</li>
				<li>s_quality -> hidden</li>
				<li>s_quality -> burning</li>

				<li>s_nature_deity -> tree of light</li>
				<li>s_nature_deity -> sky father</li>
				<li>s_nature_deity -> river christ</li>
				<li>s_nature_deity -> stone shepherd</li>

				<li>s_christ_title -> healer</li>
				<li>s_christ_title -> shepherd</li>
				<li>s_christ_title -> son</li>
				<li>s_christ_title -> fire-bearer</li>

				<li>s_elemental_force -> the winds</li>
				<li>s_elemental_force -> the waters</li>
				<li>s_elemental_force -> the sun path</li>
				<li>s_elemental_force -> thunder</li>

				<li>s_animal_or_tree -> eagle</li>
				<li>s_animal_or_tree -> cedar</li>
				<li>s_animal_or_tree -> deer</li>
				<li>s_animal_or_tree -> white oak</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>

    <RulePackDef>
		<defName>Arktos_TypeMaker_Syncretic</defName>
		<rulePack>
			<rulesStrings>
				<li>r_deityType -> [s_title_form]</li>

				<li>s_title_form -> [s_role] of [s_realm]</li>
				<li>s_title_form -> keeper of the [s_symbol]</li>
				<li>s_title_form -> [s_epithet], who walks with [s_element]</li>

				<li>s_role -> guardian</li>
				<li>s_role -> flame walker</li>
				<li>s_role -> dream speaker</li>
				<li>s_role -> spirit guide</li>

				<li>s_realm -> the crossroads</li>
				<li>s_realm -> ancestors</li>
				<li>s_realm -> hidden fire</li>
				<li>s_realm -> the Womb of the earth</li>

				<li>s_symbol -> blood tree</li>
				<li>s_symbol -> sky drum</li>
				<li>s_symbol -> sacred scar</li>

				<li>s_epithet -> one who watches</li>
				<li>s_epithet -> the veiled</li>
				<li>s_epithet -> song in the dust</li>

				<li>s_element -> rain</li>
				<li>s_element -> smoke</li>
				<li>s_element -> shadows</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>
    <!--Dharma-->
	<MemeDef ParentName="Arktos_Religion_Spiritual">
		<defName>Arktos_Religion_Dharma</defName>
		<label>Dharma Order</label>
		<description>An order following the Dharma: meditation, balance, and rites aiming to restore inner and social harmony after the fall of civilisation.</description>
		<deityNameMakerOverride>Arktos_NameMaker_Dharma</deityNameMakerOverride>
		<deityTypeMakerOverride>Arktos_TypeMaker_Dharma</deityTypeMakerOverride>
	</MemeDef>

	<RulePackDef>
		<defName>Arktos_NameMaker_Dharma</defName>
		<rulePack>
			<rulesStrings>
				<li>r_deityName -> [d_name_Religion]</li>

				<li>d_name_Religion -> [d_prefix] [d_deity_core]</li>
				<li>d_name_Religion -> The [d_virtue] One</li>
				<li>d_name_Religion -> [d_deity_core] of [d_realm]</li>
				<li>d_name_Religion -> [d_epithet] of the [d_aspect]</li>

				<li>d_prefix -> Mahā</li>
				<li>d_prefix -> Sri</li>
				<li>d_prefix -> Lokesh</li>
				<li>d_prefix -> Bhagavan</li>

				<li>d_deity_core -> Vishva</li>
				<li>d_deity_core -> Tathāgata</li>
				<li>d_deity_core -> Shakti</li>
				<li>d_deity_core -> Avatāra</li>

				<li>d_virtue -> enlightened</li>
				<li>d_virtue -> blissful</li>
				<li>d_virtue -> serene</li>
				<li>d_virtue -> infinite</li>

				<li>d_realm -> Dharma</li>
				<li>d_realm -> Nirvāṇa</li>
				<li>d_realm -> Kāla</li>
				<li>d_realm -> the ten thousand worlds</li>

				<li>d_epithet -> lotus-born</li>
				<li>d_epithet -> ocean of wisdom</li>
				<li>d_epithet -> wheel-turner</li>

				<li>d_aspect -> endless path</li>
				<li>d_aspect -> pure land</li>
				<li>d_aspect -> celestial flame</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>
	<RulePackDef>
		<defName>Arktos_TypeMaker_Dharma</defName>
		<rulePack>
			<rulesStrings>
				<li>r_deityType -> [d_title_Religion]</li>

				<li>d_title_Religion -> [d_role] of [d_principle]</li>
				<li>d_title_Religion -> lord of [d_cycle]</li>
				<li>d_title_Religion -> the [d_quality] guide</li>

				<li>d_role -> preserver</li>
				<li>d_role -> destroyer</li>
				<li>d_role -> awakener</li>
				<li>d_role -> embodiment</li>

				<li>d_principle -> Dharma</li>
				<li>d_principle -> Karma</li>
				<li>d_principle -> the eightfold path</li>
				<li>d_principle -> the middle way</li>

				<li>d_cycle -> Samsāra</li>
				<li>d_cycle -> rebirth</li>
				<li>d_cycle -> the kalpa</li>
				<li>d_cycle -> time without end</li>

				<li>d_quality -> silent</li>
				<li>d_quality -> compassionate</li>
				<li>d_quality -> timeless</li>
				<li>d_quality -> all-seeing</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>
    <!--Native-->
	<MemeDef ParentName="Arktos_Religion_Spiritual">
		<defName>Arktos_Religion_Native</defName>
		<label>Native</label>
		<description>Indigenous faith rooted in ancestral spirits and the land; rituals, totems and seasonal ceremonies hold communities together.</description>
		<deityNameMakerOverride>Arktos_NameMaker_Native</deityNameMakerOverride>
		<deityTypeMakerOverride>Arktos_TypeMaker_Native</deityTypeMakerOverride>
	</MemeDef>

	<RulePackDef>
		<defName>Arktos_NameMaker_Native</defName>
		<rulePack>
			<rulesStrings>
				<li>r_deityName -> [n_name_Religion]</li>

				<li>n_name_Religion -> [n_directional] [n_spirit_name]</li>
				<li>n_name_Religion -> spirit of the [n_natural_force]</li>
				<li>n_name_Religion -> [n_animal], child of [n_element]</li>
				<li>n_name_Religion -> [n_totem] who [n_totem_action]</li>

				<li>n_directional -> great</li>
				<li>n_directional -> old</li>
				<li>n_directional -> skyward</li>
				<li>n_directional -> deep</li>

				<li>n_spirit_name -> thunderbird</li>
				<li>n_spirit_name -> earthmaker</li>
				<li>n_spirit_name -> first flame</li>
				<li>n_spirit_name -> grandmother wind</li>

				<li>n_natural_force -> mountain</li>
				<li>n_natural_force -> river</li>
				<li>n_natural_force -> storm</li>
				<li>n_natural_force -> fire</li>

				<li>n_animal -> bear</li>
				<li>n_animal -> coyote</li>
				<li>n_animal -> raven</li>
				<li>n_animal -> turtle</li>

				<li>n_element -> fire</li>
				<li>n_element -> sky</li>
				<li>n_element -> earth</li>
				<li>n_element -> ice</li>

				<li>n_totem -> tree</li>
				<li>n_totem -> cloud</li>
				<li>n_totem -> wind</li>
				<li>n_totem -> moon</li>

				<li>n_totem_action -> speaks</li>
				<li>n_totem_action -> remembers</li>
				<li>n_totem_action -> dreams</li>
				<li>n_totem_action -> watches</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>
	<RulePackDef>
		<defName>Arktos_TypeMaker_Native</defName>
		<rulePack>
			<rulesStrings>
				<li>r_deityType -> [n_title_form]</li>

				<li>n_title_form -> [n_function] of [n_domain]</li>
				<li>n_title_form -> giver of [n_gift]</li>
				<li>n_title_form -> the one who [n_action_phrase]</li>

				<li>n_function -> walker</li>
				<li>n_function -> keeper</li>
				<li>n_function -> dancer</li>
				<li>n_function -> singer</li>

				<li>n_domain -> the four winds</li>
				<li>n_domain -> hidden trails</li>
				<li>n_domain -> the red earth</li>
				<li>n_domain -> spirit fires</li>

				<li>n_gift -> dreams</li>
				<li>n_gift -> rain</li>
				<li>n_gift -> balance</li>
				<li>n_gift -> the vision</li>

				<li>n_action_phrase -> watches in silence</li>
				<li>n_action_phrase -> sings to the bones</li>
				<li>n_action_phrase -> lights the stars</li>
				<li>n_action_phrase -> opens the circle</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>
</Defs>
