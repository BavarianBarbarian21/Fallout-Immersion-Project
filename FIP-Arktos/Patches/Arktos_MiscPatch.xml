<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- IncidentDef: GauranlenPodSpawn -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/IncidentDef[defName="GauranlenPodSpawn"]/label</xpath>
    <value><label>Treefather pod sprouting</label></value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/IncidentDef[defName="GauranlenPodSpawn"]/letterLabel</xpath>
    <value><letterLabel>Treefather pod has sprouted</letterLabel></value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/IncidentDef[defName="GauranlenPodSpawn"]/letterText</xpath>
    <value><letterText>A new Treefather pod has sprouted, ready to grow a new treeminder. Tend to it carefully to ensure a healthy symbiote.</letterText></value>
  </Operation>

  <!-- JobDef: ChangeTreeMode -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/JobDef[defName="ChangeTreeMode"]/reportString</xpath>
    <value><reportString>Changing Treefather's dryad caste</reportString></value>
  </Operation>

  <!-- ThingDef: DryadCocoon -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DryadCocoon"]/label</xpath>
    <value><label>treeminder cocoon</label></value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DryadCocoon"]/description</xpath>
    <value><description>A cocoon where a treeminder morphs into a new caste, guided by the Treefather's FEV-infused roots.</description></value>
  </Operation>

  <!-- ThingDef: DryadHealingPod -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DryadHealingPod"]/label</xpath>
    <value><label>healing pod</label></value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="DryadHealingPod"]/description</xpath>
    <value><description>A pod filled with restorative Treefather sap, used to heal injured treeminders.</description></value>
  </Operation>

  <!-- ThingDef: GaumakerCocoon -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="GaumakerCocoon"]/label</xpath>
    <value><label>sproutling cocoon</label></value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="GaumakerCocoon"]/description</xpath>
    <value><description>A cocoon where sproutlings merge to create a new Treefather pod, continuing the symbiotic cycle.</description></value>
  </Operation>

  <!-- ThingDef: Plant_TreeGauranlen -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Plant_TreeGauranlen"]/label</xpath>
    <value><label>Treefather</label></value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Plant_TreeGauranlen"]/description</xpath>
    <value><description>A mutated tree infused with FEV, able to produce treeminders and pods. Its roots run deep, connecting it to the wasteland's secrets.</description></value>
  </Operation>

