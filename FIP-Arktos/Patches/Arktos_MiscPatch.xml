    <value><verb>change</verb></value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/WorkGiverDef[defName="ChangeTreeMode"]/gerund</xpath>
    <value><gerund>changing</gerund></value>
  </Operation>

