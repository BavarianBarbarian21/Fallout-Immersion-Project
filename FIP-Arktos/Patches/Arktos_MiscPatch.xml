  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Dryad_Basic"]/label</xpath>
    <value><label>treeminder</label></value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="Dryad_Basic"]/description</xpath>
    <value><description>A basic treeminder, mammal-like and loyal to its Treefather. It can morph into specialized castes as needed.</description></value>
  </Operation>

  <!-- PawnKindDef: Dryad_Basic -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/PawnKindDef[defName="Dryad_Basic"]/label</xpath>
    <value><label>treeminder</label></value>
  </Operation>

