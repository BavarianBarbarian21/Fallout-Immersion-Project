  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThoughtDef[defName="DryadDied"]/stages/li/label</xpath>
    <value><label>treeminder died</label></value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThoughtDef[defName="DryadDied"]/stages/li/description</xpath>
    <value><description>My Treefather's treeminder is gone forever. You shall be missed, little one.</description></value>
  </Operation>

  <!-- WorkGiverDef: ChangeTreeMode -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/WorkGiverDef[defName="ChangeTreeMode"]/label</xpath>
    <value><label>Change Treefather caste</label></value>
  </Operation>
