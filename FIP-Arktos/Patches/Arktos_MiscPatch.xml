    <xpath>LanguageData/AlertGauranlenTreeWithoutDryadTypeLabel</xpath>
    <value>Treefather has no treeminder caste</value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>LanguageData/AlertGauranlenTreeWithoutDryadTypeDesc</xpath>
