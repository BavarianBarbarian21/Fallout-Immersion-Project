<?xml version="1.0" encoding="utf-8" ?>
<!-- Remove vanilla Structure_* MemeDefs (keeps Arktos_ prefixed defs) -->
<Patch>
    <!--<Operation Class="PatchOperationRemove"><xpath>//MemeDef[starts-with(defName, 'Structure_')]</xpath></Operation>-->
    <Operation Class="PatchOperationRemove">
        <xpath>//FactionDef/structureMemeWeights</xpath>
    </Operation>
    <!-- Add Arktos structure weights to FactionBase so factions default to Arktos structures -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/FactionDef[@Name="FactionBase"]</xpath>
        <value>
            <structureMemeWeights>
                <Arktos_Religion_ChildrenOfAtom>1</Arktos_Religion_ChildrenOfAtom>
                <Arktos_Religion_ChildrenOfTheCathedral>1</Arktos_Religion_ChildrenOfTheCathedral>
                <Arktos_Religion_ChildrenOfKrvibi>1</Arktos_Religion_ChildrenOfKrvibi>
                <Arktos_Religion_FollowerOfTheApocalypse>1</Arktos_Religion_FollowerOfTheApocalypse>
                <Arktos_Religion_CanaaniteChurch>1</Arktos_Religion_CanaaniteChurch>
                <Arktos_Religion_AbbeyOfTheRoad>1</Arktos_Religion_AbbeyOfTheRoad>
                <Arktos_Religion_OrderOfOurLadyOfTheWaters>1</Arktos_Religion_OrderOfOurLadyOfTheWaters>
                <Arktos_Religion_Syncretic>1</Arktos_Religion_Syncretic>
                <Arktos_Religion_Dharma>1</Arktos_Religion_Dharma>
                <Arktos_Religion_Native>1</Arktos_Religion_Native>
                <Arktos_Government_Democratic>1</Arktos_Government_Democratic>
                <Arktos_Government_Despotic>1</Arktos_Government_Despotic>
                <Arktos_Government_Raider>1</Arktos_Government_Raider>
                <Arktos_Government_Tribal>1</Arktos_Government_Tribal>
            </structureMemeWeights>
        </value>
    </Operation>
</Patch>