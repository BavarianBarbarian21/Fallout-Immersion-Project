<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- MechWeightClassDef label changes -->
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/MechWeightClassDef[defName="Light"]/label</xpath>
    <value>
      <label>Civilian</label>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/MechWeightClassDef[defName="Medium"]/label</xpath>
    <value>
      <label>Military</label>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/MechWeightClassDef[defName="Heavy"]/label</xpath>
    <value>
      <label>Automatron</label>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/MechWeightClassDef[defName="UltraHeavy"]/label</xpath>
    <value>
      <label>Command-bot</label>
    </value>
  </Operation>

  <!-- Language key replacements for Biotech -->
  <Operation Class="PatchOperationReplace">
    <xpath>/LanguageData/MechWeightClass</xpath>
    <value>
      <MechWeightClass>Operating System</MechWeightClass>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/LanguageData/MechWeightClassExplanation</xpath>
    <value>
      <MechWeightClassExplanation>The Operating System of this robot.</MechWeightClassExplanation>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/LanguageData/MechOverseer</xpath>
    <value>
      <MechOverseer>This robot's overseer is {0}.</MechOverseer>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/LanguageData/MechWorkActivitiesExplanation</xpath>
    <value>
      <MechWorkActivitiesExplanation>The work activities that can be performed by this robot.\n\nThe following list details which work activities can be done within each work type</MechWorkActivitiesExplanation>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/LanguageData/MechRechargeSettingsExplanation</xpath>
    <value>
      <MechRechargeSettingsExplanation>Change when robots will start and stop charging.\n\nRobots with energy below this range will automatically seek out a recharger. They will stop charging once they reach the top of this range. These settings only apply in work mode.</MechRechargeSettingsExplanation>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/LanguageData/MechWorkSkillDesc</xpath>
    <value>
      <MechWorkSkillDesc>The skill level that this robot acts with.</MechWorkSkillDesc>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/LanguageData/AnyMech</xpath>
    <value>
      <AnyMech>Any robot</AnyMech>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/LanguageData/CaravanLacksMechMechanitorWarning</xpath>
    <value>
      <CaravanLacksMechMechanitorWarning>Your caravan contains a robot but not their overseer. You will have limited control over the robot when you reach your destination.</CaravanLacksMechMechanitorWarning>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/LanguageData/MechsSection</xpath>
    <value>
      <MechsSection>Robots</MechsSection>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/LanguageData/RenameMech</xpath>
    <value>
      <RenameMech>Rename robot</RenameMech>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>/LanguageData/MechGainsName</xpath>
    <value>
      <MechGainsName>The robot's name is now {0}.</MechGainsName>
    </value>
  </Operation>

</Patch>
