<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Mister Farmhand ThingDef -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="Mech_Agrihand"]</xpath>
		<value>
			<ThingDef ParentName="Floating">
				<defName>Mech_Agrihand</defName>
				<label>Mister Farmhand</label>
				<description>Agricultural Handy variant with crop sensors, pesticide sprayers, and tireless cheer for “the simple country life.”</description>
				<statBases>
					<MoveSpeed>5</MoveSpeed>
				</statBases>
				<race>
					<body>Handy</body>
					<mechEnabledWorkTypes>
						<li>Growing</li>
						<li>Handling</li>
					</mechEnabledWorkTypes>
					<mechWorkTypePriorities>
						<Growing>2</Growing>
					</mechWorkTypePriorities>
					<lifeStageAges>
						<li>
							<def>MechanoidFullyFormed</def>
							<minAge>0</minAge>
							<soundWounded>Handy_Wounded</soundWounded>
							<soundDeath>Handy_Death</soundDeath>
							<soundCall>Handy_Call</soundCall>
							<soundAngry>Handy_Angry</soundAngry>
						</li>
					</lifeStageAges>
				</race>
			</ThingDef>
		</value>
	</Operation>
	<!-- Mister Farmhand PawnKindDef -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/PawnKindDef[defName="Mech_Agrihand"]</xpath>
		<value>
			<PawnKindDef ParentName="LightMechanoidKind">
				<defName>Mech_Agrihand</defName>
				<label>Mister Farmhand</label>
				<race>Mech_Agrihand</race>
				<combatPower>10</combatPower>
				<lifeStages>
					<li>
						<bodyGraphicData>
							<texPath>RobCo/MisterHandy/MisterHandy</texPath>
							<shaderType>CutoutWithOverlay</shaderType>
							<graphicClass>Graphic_Multi</graphicClass>
							<drawSize>1.25</drawSize>
							<shadowData>
								<volume>(0.3, 0.4, 0.3)</volume>
								<offset>(0,0,-0.25)</offset>
							</shadowData>
						</bodyGraphicData>
					</li>
				</lifeStages>
				<weaponTags>
					<li>MechanoidGunSpiner</li>
				</weaponTags>
			</PawnKindDef>
		</value>
	</Operation>
	<!-- Mister Farmhand RecipeDef -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/RecipeDef[defName="Agrihand"]</xpath>
		<value>
			<RecipeDef ParentName="MediumMechanoidRecipe">
				<defName>Agrihand</defName>
				<label>craft Mister Farmhand</label>
				<description>Craft a Mister Farmhand.</description>
				<products>
					<Mech_Agrihand>1</Mech_Agrihand>
				</products>
				<descriptionHyperlinks>
					<ThingDef>Mech_Agrihand</ThingDef>
				</descriptionHyperlinks>
			</RecipeDef>
		</value>
	</Operation>
</Patch>