<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- Add Light and Medium tier robots to MechGestator -->
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName='MechGestator']/recipes</xpath>
    <value>
      <!-- Light tier recipes -->
      <li>RobCo_Constructron</li>
      <li>RobCo_Factotron</li>
      <li>RobCo_Utilitron</li>
      <li>RobCo_Collectron</li>
      <li>RobCo_Protectron</li>
      <li>RobCo_Eyebot</li>
      <li>RobCo_EyebotDuraframe</li>
      <!-- Medium tier recipes -->
      <li>RobCo_MisterFarmhand</li>
      <li>RobCo_MisterHandy</li>
      <li>RobCo_MissNanny</li>
      <li>RobCo_MisterGutsyGunner</li>
      <li>RobCo_MisterGutsyFlamer</li>
      <li>RobCo_MisterGutsyChopper</li>
    </value>
  </Operation>

  <!-- Add Heavy and SuperHeavy tier robots to LargeMechGestator -->
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[defName='LargeMechGestator']/recipes</xpath>
    <value>
      <!-- Heavy tier recipes -->
      <li>RobCo_Robobrain</li>
      <li>RobCo_Cyberdog</li>
      <li>RobCo_Assaultron</li>
      <!-- SuperHeavy tier recipes -->
      <li>RobCo_SentrybotChopper</li>
      <li>RobCo_SentrybotFlamer</li>
      <li>RobCo_SentrybotGunner</li>
    </value>
  </Operation>

</Patch>
