<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Constructron (from Mech_Constructoid) -->
  <ThingDef ParentName="LightMechanoid">
    <defName>RobCo_Constructron</defName>
    <label>Constructron</label>
    <description>Industrial-grade version, all welders and rivet guns. Once meant for building cities of old.</description>
    <statBases>
      <MoveSpeed>2</MoveSpeed>
    </statBases>
    <race>
      <body>Protectron</body>
      <mechEnabledWorkTypes>
        <li>Construction</li>
      </mechEnabledWorkTypes>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Protectron_Wounded</soundWounded>
          <soundDeath>Protectron_Death</soundDeath>
          <soundCall>Protectron_Call</soundCall>
          <soundAngry>Protectron_Angry</soundAngry>
        </li>
      </lifeStageAges>
    </race>
  </ThingDef>

  <PawnKindDef ParentName="LightMechanoidKind">
    <defName>RobCo_ConstructronKind</defName>
    <label>Constructron</label>
    <race>RobCo_Constructron</race>
    <combatPower>10</combatPower>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>RobCo/Utilitron/Utilitron</texPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.25</drawSize>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.25)</offset>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponTags>
      <li>MechanoidGunSpiner</li>
    </weaponTags>
  </PawnKindDef>

  <RecipeDef ParentName="LightMechanoidRecipe">
    <defName>RobCo_Constructron_Recipe</defName>
    <label>craft Constructron</label>
    <description>Craft a RobCo Constructron.</description>
    <products>
      <RobCo_Constructron>1</RobCo_Constructron>
    </products>
    <descriptionHyperlinks>
      <ThingDef>RobCo_Constructron</ThingDef>
    </descriptionHyperlinks>
  </RecipeDef>

