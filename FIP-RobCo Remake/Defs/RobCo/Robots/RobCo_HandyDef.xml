<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Mister Farmhand -->
  <ThingDef ParentName="RobCo_HandyBase">
    <defName>RobCo_MisterFarmhand</defName>
    <label>Mister Farmhand</label>
    <description>Agricultural Handy variant with crop sensors, pesticide sprayers, and tireless cheer for "the simple country life."</description>
    <race>
      <mechEnabledWorkTypes>
        <li>Growing</li>
        <li>Handling</li>
        <li>PlantCutting</li>
      </mechEnabledWorkTypes>
      <mechWorkTypePriorities>
        <Growing>2</Growing>
      </mechWorkTypePriorities>
    </race>
  </ThingDef>

  <PawnKindDef ParentName="LightMechanoidKind">
    <defName>RobCo_MisterFarmhand</defName>
    <label>Mister Farmhand</label>
    <race>RobCo_MisterFarmhand</race>
    <combatPower>10</combatPower>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>RobCo/MisterHandy/MisterHandy</texPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.25</drawSize>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.25)</offset>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponTags>
      <li>RobCo_LaserLow</li>
    </weaponTags>
  </PawnKindDef>

  <RecipeDef ParentName="RobCo_Handy">
    <defName>RobCo_MisterFarmhand</defName>
    <label>craft Mister Farmhand</label>
    <description>Craft a RobCo Mister Farmhand.</description>
    <products>
      <RobCo_MisterFarmhand>1</RobCo_MisterFarmhand>
    </products>
    <descriptionHyperlinks>
      <ThingDef>RobCo_MisterFarmhand</ThingDef>
    </descriptionHyperlinks>
  </RecipeDef>

