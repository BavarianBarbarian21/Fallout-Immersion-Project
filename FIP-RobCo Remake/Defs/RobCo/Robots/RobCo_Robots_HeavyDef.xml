<Defs>
  <!-- Robobrain (Centurion) -->
  <ThingDef ParentName="HeavyMechanoid">
    <defName>RobCo_Robobrain</defName>
    <label>Robobrain</label>
				<description>Human intellect entombed in steel. Their eerie, monotone logic is a reminder of what happens when war and science mix too freely.</description>
				<statBases>
					<MoveSpeed>3</MoveSpeed>
				</statBases>
				<race>
					<body>Robobrain</body>
					<lifeStageAges>
						<li>
							<def>MechanoidFullyFormed</def>
							<minAge>0</minAge>
							<soundWounded>Robobrain_Wounded</soundWounded>
							<soundDeath>Robobrain_Death</soundDeath>
							<soundCall>Robobrain_Call</soundCall>
							<soundAngry>Robobrain_Angry</soundAngry>
						</li>
						<li>
							<def>MechanoidFullyFormed</def>
							<minAge>10</minAge>
							<soundWounded>Robobrain_Wounded</soundWounded>
							<soundDeath>Robobrain_Death</soundDeath>
							<soundCall>Robobrain_Call</soundCall>
							<soundAngry>Robobrain_Angry</soundAngry>
						</li>
					</lifeStageAges>
					<baseHealthScale>3</baseHealthScale>
				</race>
				<comps>
					<li Class="CompProperties_ProjectileInterceptor">
						<radius>6</radius>
						<interceptGroundProjectiles>true</interceptGroundProjectiles>
						<color>(0.4, 0.4, 0.4)</color>
						<reactivateEffect>BulletShieldGenerator_Reactivate</reactivateEffect>
						<activeSound>BulletShield_Ambience</activeSound>
						<hitPoints>300</hitPoints>
						<hitPointsRestoreInstantlyAfterCharge>true</hitPointsRestoreInstantlyAfterCharge>
						<chargeDurationTicks>1800</chargeDurationTicks><!-- 30s -->
						<rechargeHitPointsIntervalTicks>120</rechargeHitPointsIntervalTicks>
						<minIdleAlpha>0.2</minIdleAlpha>
						<drawWithNoSelection>True</drawWithNoSelection>
						<disarmedByEmpForTicks>1500</disarmedByEmpForTicks>
						<gizmoTipKey>ProjectileInterceptorTip</gizmoTipKey>
					</li>
				</comps>
  </ThingDef>

  <PawnKindDef ParentName="LightMechanoidKind">
				<defName>RobCo_Robobrain</defName>
				<label>Robobrain</label>
				<race>RobCo_Robobrain</race>
				<combatPower>250</combatPower>
				<lifeStages>
					<li>
						<bodyGraphicData>
							<texPath>RobCo/Robobrain/Robobrain</texPath>
							<shaderType>CutoutWithOverlay</shaderType>
							<graphicClass>Graphic_Multi</graphicClass>
							<drawSize>1.25</drawSize>
							<shadowData>
								<volume>(0.3, 0.4, 0.3)</volume>
								<offset>(0,0,-0.25)</offset>
							</shadowData>
						</bodyGraphicData>
					</li>
					<li>
						<bodyGraphicData>
							<texPath>RobCo/RobobrainAncient/RobobrainAncient</texPath>
							<shaderType>CutoutWithOverlay</shaderType>
							<graphicClass>Graphic_Multi</graphicClass>
							<drawSize>1.25</drawSize>
							<shadowData>
								<volume>(0.3, 0.4, 0.3)</volume>
								<offset>(0,0,-0.25)</offset>
							</shadowData>
						</bodyGraphicData>
					</li>
				</lifeStages>
				<weaponTags>
					<li>MechanoidGunShortRange</li>
				</weaponTags>
			</PawnKindDef>

  <RecipeDef ParentName="HeavyMechanoidRecipe">
				<defName>RobCo_Robobrain</defName>
				<label>craft Robobrain</label>
				<description>Craft an Robobrain.</description>
