<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Robobrain (Centurion) -->
  <ThingDef ParentName="HeavyMechanoid">
    <defName>RobCo_Robobrain</defName>
    <label>Robobrain</label>
    <description>A heavy command mechanoid fitted with a projectile interceptor and a thick hull.</description>
    <statBases>
      <MoveSpeed>4</MoveSpeed>
    </statBases>
    <race>
      <body>Heavy</body>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Centurion_Wounded</soundWounded>
          <soundDeath>Centurion_Death</soundDeath>
          <soundCall>Centurion_Call</soundCall>
          <soundAngry>Centurion_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <baseHealthScale>3</baseHealthScale>
    </race>
    <comps>
      <li Class="CompProperties_ProjectileInterceptor">
        <radius>2.8</radius>
        <hitPoints>200</hitPoints>
        <chargeDurationTicks>900</chargeDurationTicks>
        <cooldownTicks>300</cooldownTicks>
        <chargeCost>120</chargeCost>
        <mapIcon>ProjectileInterceptorIcon</mapIcon>
      </li>
    </comps>
  </ThingDef>

  <PawnKindDef ParentName="HeavyMechanoidKind">
    <defName>RobCo_RobobrainKind</defName>
    <label>Robobrain</label>
    <race>RobCo_Robobrain</race>
    <combatPower>650</combatPower>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>RobCo/Robobrain/Robobrain</texPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2.5</drawSize>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponTags>
      <li>HellsphereCannonGun</li>
    </weaponTags>
  </PawnKindDef>

  <RecipeDef ParentName="HeavyMechanoidRecipe">
    <defName>RobCo_Robobrain_Recipe</defName>
    <label>craft Robobrain</label>
    <description>Craft a RobCo Robobrain.</description>
    <products>
      <RobCo_Robobrain>1</RobCo_Robobrain>
    </products>
    <descriptionHyperlinks>
      <ThingDef>RobCo_Robobrain</ThingDef>
    </descriptionHyperlinks>
  </RecipeDef>

