<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Crashed Vertibot -->
    <ThingDef ParentName="RobCo_EyebotBase">
        <defName>RobCo_EyebotCrashed</defName>
        <label>Crashed Vertibird Robot</label>
        <description>This is a strange Robot, it seems to collect data and send them... somewhere.</description>
        <statBases>
            <MoveSpeed>2</MoveSpeed>
        </statBases>
        <killedLeavingsPlayerHostile>
            <SignalChip>1</SignalChip>
        </killedLeavingsPlayerHostile>
    </ThingDef>

    <PawnKindDef ParentName="LightMechanoidKind">
        <defName>RobCo_EyebotCrashed</defName>
        <label>Crashed Vertibird Robot</label>
        <race>RobCo_EyebotCrashed</race>
        <combatPower>300</combatPower>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>RobCo/EyebotBoss/EyebotBoss</texPath>
                    <shaderType>CutoutWithOverlay</shaderType>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <drawSize>1.25</drawSize>
                    <shadowData>
                        <volume>(0.3, 0.4, 0.3)</volume>
                        <offset>(0,0,-0.25)</offset>
                    </shadowData>
                </bodyGraphicData>
            </li>
        </lifeStages>
        <weaponTags>
            <li>MechanoidGunLongRange</li>
        </weaponTags>
    </PawnKindDef>


    <!-- Hydra -->
    <ThingDef ParentName="RobCo_GutsyBase">
        <defName>RobCo_GutsyHydra</defName>
        <label>Hydra</label>
        <description>This is the Hydra, a dangerous foe of many wasteland legends. They say when you slice off one of its eyes two more grow back.</description>
            <statBases>
            <MoveSpeed>5</MoveSpeed>
        </statBases>
        <killedLeavingsPlayerHostile>
            <RobCo_BrokenEyebotFrame>1</RobCo_BrokenEyebotFrame>
        </killedLeavingsPlayerHostile>
        <comps>
            <li Class="CompProperties_MechCarrier">
                <spawnPawnKind>RobCo_EyeOfHydra</spawnPawnKind>
                <fixedIngredient>Steel</fixedIngredient>
                <costPerPawn>25</costPerPawn>
                <startingIngredientCount>600</startingIngredientCount>
                <maxIngredientCount>600</maxIngredientCount>
                <spawnEffecter>WarqueenWarUrchinsSpawned</spawnEffecter>
                <spawnedMechEffecter>WarUrchinSpawned</spawnedMechEffecter>
                <attachSpawnedEffecter>true</attachSpawnedEffecter>
                <attachSpawnedMechEffecter>true</attachSpawnedMechEffecter>
            </li>
        </comps>
    </ThingDef>

        <PawnKindDef ParentName="LightMechanoidKind">
            <defName>RobCo_GutsyHydra</defName>
            <label>Hydra</label>
            <race>RobCo_GutsyHydra</race>
            <combatPower>500</combatPower>
            <lifeStages>
                <li>
                    <bodyGraphicData>
                        <texPath>RobCo/MisterGutsyBoss/MisterGutsyBoss</texPath>
                        <shaderType>CutoutWithOverlay</shaderType>
                        <graphicClass>Graphic_Multi</graphicClass>
                        <drawSize>1.5</drawSize>
                        <shadowData>
                            <volume>(0.3, 0.4, 0.3)</volume>
                            <offset>(0,0,-0.25)</offset>
                        </shadowData>
                    </bodyGraphicData>
                </li>
            </lifeStages>
            <weaponTags>
                <li>MechanoidGunShortRange</li>
            </weaponTags>
        </PawnKindDef>



