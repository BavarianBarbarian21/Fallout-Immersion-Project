<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- RobCo weapon set (RobCo_ prefixed) -->
  <ThingDef ParentName="BaseGun">
    <defName>RobCo_Gun_ThumpCannon</defName>
    <label>RobCo breacher cannon</label>
    <description>A RobCo robot breaching launcher. Fires a concussion bomb designed for demolition and siege, optimized for robot assault tactics.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>RobCo/Misc/Invisible</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <statBases>
      <MarketValue>1400</MarketValue>
      <Mass>20</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.87</AccuracyShort>
      <AccuracyMedium>0.77</AccuracyMedium>
      <AccuracyLong>0.64</AccuracyLong>
      <RangedWeapon_Cooldown>4</RangedWeapon_Cooldown>
    </statBases>
    <relicChance>0</relicChance>
    <weaponTags>
      <li>MechanoidGunBreach</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RobCo_Bullet_ThumpCannon</defaultProjectile>
        <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
        <forcedMissRadius>1.9</forcedMissRadius>
        <warmupTime>1</warmupTime>
        <range>24.9</range>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <soundCast>ThumpCannon_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <noiseRadius>4</noiseRadius>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>RobCo_Bullet_ThumpCannon</defName>
    <label>thump bomb</label>
    <graphicData>
      <texPath>Things/Projectile/Charge_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Thump</damageDef>
      <damageAmountBase>9</damageAmountBase>
      <explosionRadius>1.9</explosionRadius>
      <stoppingPower>3</stoppingPower>
      <speed>50</speed>
      <soundExplode>ThumpCannon_Impact</soundExplode>
    </projectile>
  </ThingDef>

