<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ================= BULLETS ================= -->

<!-- RobCo base laser -->
  <ThingDef Name="RobCo_BaseBullet" ParentName="BaseBullet" Abstract="True">
    <graphicData>
      <texPath>RobCo/Misc/Laser</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
  </ThingDef>

  <!-- Low-beam laser bullet -->
  <ThingDef ParentName="RobCo_BaseBullet">
    <defName>RobCo_Bullet_LaserLow</defName>
    <label>low-beam laser</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>8</damageAmountBase>
      <armorPenetrationBase>0.4</armorPenetrationBase>
      <speed>75</speed>
      <stoppingPower>0.5</stoppingPower>
    </projectile>
  </ThingDef>

  <!-- High-beam laser bullet -->
  <ThingDef ParentName="RobCo_BaseBullet">
    <defName>RobCo_Bullet_LaserHigh</defName>
    <label>high-beam laser</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>12</damageAmountBase>
      <armorPenetrationBase>0.4</armorPenetrationBase>
      <speed>85</speed>
      <stoppingPower>0.8</stoppingPower>
    </projectile>
  </ThingDef>

  <!-- Auto-laser bullet -->
  <ThingDef ParentName="RobCo_BaseBullet">
    <defName>RobCo_Bullet_LaserAuto</defName>
    <label>auto laser</label>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>6</damageAmountBase>
      <armorPenetrationBase>0.2</armorPenetrationBase>
      <speed>80</speed>
      <stoppingPower>2.5</stoppingPower>
    </projectile>
  </ThingDef>

  <!-- Sentry Rocket -->
  <ThingDef ParentName="BaseBullet">
    <defName>RobCo_Bullet_SentryRocket</defName>
    <label>sentry rocket</label>
    <graphicData>
      <texPath>Things/Projectile/Rocket_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Thump</damageDef>
      <explosionRadius>3.9</explosionRadius>
      <speed>50</speed>
    </projectile>
  </ThingDef>

  <!-- ================= WEAPONS ================= -->

<!-- RobCo base gun  -->
  <ThingDef Name="RobCo_BaseGun" ParentName="BaseGun" Abstract="True">
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <relicChance>0</relicChance>
    <graphicData>
      <drawSize>0.65</drawSize>
    </graphicData>
    <equippedDistanceOffset>-0.14</equippedDistanceOffset>
    <weaponClasses>
      <li>Ranged</li>
    </weaponClasses>
  </ThingDef>

  <!-- Civilian blaster -->
  <ThingDef ParentName="RobCo_BaseGun">
    <defName>RobCo_Blaster_Civilian</defName>
    <label>RobCo Civilian Blaster</label>
    <description>A simple civilian blaster using a low-beam laser cartridge.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>RobCo/Misc/Invisible</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>500</MarketValue>
      <Mass>2</Mass>
      <AccuracyTouch>0.70</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.50</AccuracyMedium>
      <AccuracyLong>0.30</AccuracyLong>
      <RangedWeapon_Cooldown>2.0</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>RobCo_Civilian</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <range>20</range>
        <warmupTime>0.4</warmupTime>
        <defaultProjectile>RobCo_Bullet_LaserLow</defaultProjectile>
        <burstShotCount>1</burstShotCount>
      </li>
    </verbs>
  </ThingDef>

