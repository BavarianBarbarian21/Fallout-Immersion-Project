  <!-- Gutsy Array -->
  <ThingDef ParentName="RobCo_BaseGun">
      <defName>RobCo_GutsyArray</defName>
      <label>Gutsy array</label>
      <description>A multi-purpose armament for Mister Gutsy-class frames: a compact automatic shell launcher with a built-in napalm burner and a reinforced ripper tool for close work.</description>
      <techLevel>Spacer</techLevel>
      <graphicData>
        <texPath>RobCo/Misc/Invisible</texPath>
        <graphicClass>Graphic_Single</graphicClass>
      </graphicData>
      <tradeability>None</tradeability>
      <destroyOnDrop>true</destroyOnDrop>
      <relicChance>0</relicChance>
      <statBases>
        <MarketValue>1500</MarketValue>
        <Mass>3.5</Mass>
        <AccuracyTouch>0.80</AccuracyTouch>
        <AccuracyShort>0.75</AccuracyShort>
        <AccuracyMedium>0.60</AccuracyMedium>
        <AccuracyLong>0.40</AccuracyLong>
        <RangedWeapon_Cooldown>2.0</RangedWeapon_Cooldown>
      </statBases>
      <weaponTags>
        <li>RobCo_GutsyArray</li>
      </weaponTags>
      <verbs>
        <li>
          <verbClass>Verb_Shoot</verbClass>
          <hasStandardCommand>true</hasStandardCommand>
          <defaultProjectile>Bullet_MiniShotgun</defaultProjectile>
          <warmupTime>1.1</warmupTime>
          <range>20</range>
          <burstShotCount>2</burstShotCount>
          <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
          <soundCast>Shot_Shotgun</soundCast>
          <soundCastTail>GunTail_Heavy</soundCastTail>
          <muzzleFlashScale>9</muzzleFlashScale>
        </li>
      </verbs>
      <tools>
        <li>
          <label>barrel</label>
          <capacities>
            <li>Blunt</li>
            <li>Poke</li>
          </capacities>
          <power>12</power>
          <cooldownTime>2.6</cooldownTime>
        </li>
      </tools>
      <comps Inherit="False">
        <li Class="CompProperties_EquippableAbilityReloadable">
          <abilityDef>RobCo_NapalmFlamer</abilityDef>
          <maxCharges>3</maxCharges>
          <soundReload>Standard_Reload</soundReload>
          <chargeNoun>napalm charge</chargeNoun>
          <ammoDef>Chemfuel</ammoDef>
          <ammoCountPerCharge>10</ammoCountPerCharge>
          <baseReloadTicks>60</baseReloadTicks>
        </li>
      </comps>
    </ThingDef>

