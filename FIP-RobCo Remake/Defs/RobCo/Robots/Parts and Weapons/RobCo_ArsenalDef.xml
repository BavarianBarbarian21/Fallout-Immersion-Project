    <!-- Exterminator -->
    <ThingDef ParentName="RobCo_BaseGun">
      <defName>RobCo_Exterminator</defName>
      <label>Exterminator</label>
      <description>A compact RobCo exterminator launcher firing toxic canisters. Designed for mechanoid frames; not craftable or tradable and destroyed on drop.</description>
      <techLevel>Spacer</techLevel>
      <graphicData>
        <texPath>RobCo/Misc/Invisible</texPath>
        <graphicClass>Graphic_Single</graphicClass>
      </graphicData>
      <relicChance>0</relicChance>
      <statBases>
        <MarketValue>1800</MarketValue>
