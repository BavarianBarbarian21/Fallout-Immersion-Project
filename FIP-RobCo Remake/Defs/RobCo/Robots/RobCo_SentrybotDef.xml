<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Sentrybot Siegebreaker -->
  <ThingDef ParentName="RobCo_SentrybotBase">
    <defName>RobCo_SentrybotSiegebreaker</defName>
    <label>Siegebreaker Sentrybot</label>
    <description>A heavy-duty yard guardian for when “keep out” signs just aren’t enough. Its breaching rockets turn raider cover—and the occasional garden shed—into decorative rubble.</description>
    <race>
    <lifeStageAges>
      <li>
						<def>MechanoidFullyFormed</def>
						<minAge>10</minAge>
						<soundWounded>Sentrybot_Wounded</soundWounded>
						<soundDeath>Sentrybot_Death</soundDeath>
						<soundCall>Sentrybot_Call</soundCall>
						<soundAngry>Sentrybot_Angry</soundAngry>
					</li>
    </lifeStageAges>
    </race>
  </ThingDef>

  <PawnKindDef ParentName="HeavyMechanoidKind">
    <defName>RobCo_SentrybotSiegebreaker</defName>
    <label>Siegebreaker Sentrybot</label>
    <race>RobCo_SentrybotSiegebreaker</race>
    <combatPower>600</combatPower>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>RobCo/Sentrybot/Sentrybot</texPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.5</drawSize>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.25)</offset>
          </shadowData>
        </bodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>RobCo/SentrybotAncient/SentrybotAncient</texPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>1.5</drawSize>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.25)</offset>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponTags>
      <li>RobCo_SentryRocketLauncher</li>
    </weaponTags>
  </PawnKindDef>

  <RecipeDef ParentName="RobCo_Sentrybot">
    <defName>RobCo_SentrybotSiegebreaker</defName>
    <label>craft Siegebreaker Sentrybot</label>
    <description>Craft a Siegebreaker Sentrybot.</description>
    <products>
      <RobCo_SentrybotSiege>1</RobCo_SentrybotSiege>
    </products>
    <descriptionHyperlinks>
      <ThingDef>RobCo_SentrybotSiegebreaker</ThingDef>
    </descriptionHyperlinks>
  </RecipeDef>

