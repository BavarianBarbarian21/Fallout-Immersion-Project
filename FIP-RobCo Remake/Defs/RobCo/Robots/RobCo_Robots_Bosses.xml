<Defs>
    <!-- Crashed Vertibot -->
    <ThingDef ParentName="RobCo_EyebotBase">
        <defName>RobCo_CrashedVertibot</defName>
        <label>Crashed Vertibot Robot</label>
        <description>This is indeed a strange Robot.</description>
            <statBases>
            <MoveSpeed>2</MoveSpeed>
        </statBases>
        <race>
            <body>RobCo_Eyebot</body>
            <lifeStageAges>
                <li>
                    <def>MechanoidFullyFormed</def>
                    <minAge>0</minAge>
                    <soundWounded>Eyebot_Wounded</soundWounded>
                    <soundDeath>Eyebot_Death</soundDeath>
                    <soundCall>Eyebot_Call</soundCall>
                    <soundAngry>Eyebot_Angry</soundAngry>
                </li>
            </lifeStageAges>
        </race>
        <killedLeavingsPlayerHostile>
            <SignalChip>1</SignalChip>
        </killedLeavingsPlayerHostile>
    </ThingDef>
    <PawnKindDef Name="RobCo_EyebotKindBase" ParentName="LightMechanoidKind" Abstract="True">
        <combatPower>300</combatPower>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <shaderType>CutoutWithOverlay</shaderType>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <drawSize>1.25</drawSize>
                    <shadowData>
                        <volume>(0.3, 0.4, 0.3)</volume>
                        <offset>(0,0,-0.25)</offset>
                    </shadowData>
                </bodyGraphicData>
            </li>
        </lifeStages>
        <weaponTags>
            <li>MechanoidGunLongRange</li>
        </weaponTags>
    </PawnKindDef>
    <PawnKindDef ParentName="RobCo_EyebotKindBase">
