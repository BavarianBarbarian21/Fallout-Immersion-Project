<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Deathbot (Apocriton) -->
  <ThingDef ParentName="SuperHeavyMechanoid">
    <defName>RobCo_Deathbot</defName>
    <label>Deathbot</label>
    <description>It's a robot, it will be your death, it's a Deathbot, no more questions.</description>
    <statBases>
      <MoveSpeed>2</MoveSpeed>
    </statBases>
    <race>
      <body>Sentrybot</body>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
          <soundWounded>Sentrybot_Wounded</soundWounded>
          <soundDeath>Sentrybot_Death</soundDeath>
          <soundCall>Sentrybot_Call</soundCall>
          <soundAngry>Sentrybot_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <baseHealthScale>5</baseHealthScale>
    </race>
  </ThingDef>

  <PawnKindDef ParentName="HeavyMechanoidKind">
    <defName>RobCo_DeathbotKind</defName>
    <label>Deathbot</label>
    <race>RobCo_Deathbot</race>
    <combatPower>600</combatPower>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>RobCo/SentrybotBoss/SentrybotBoss</texPath>
          <shaderType>CutoutWithOverlay</shaderType>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2</drawSize>
          <shadowData>
            <volume>(0.3, 0.4, 0.3)</volume>
            <offset>(0,0,-0.25)</offset>
          </shadowData>
        </bodyGraphicData>
      </li>
    </lifeStages>
    <weaponTags>
      <li>MechanoidGunShortRange</li>
    </weaponTags>
  </PawnKindDef>

