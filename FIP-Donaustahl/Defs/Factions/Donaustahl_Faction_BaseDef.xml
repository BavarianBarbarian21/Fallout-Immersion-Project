<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <FactionDef ParentName="FactionBase" Name="Donaustahl_Factionbase" Abstract="True">
    <defName>Donaustahl_Factionbase</defName>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <techLevel>Industrial</techLevel>
    <allowedCultures>
      <li>Donaustahl_Culture_American</li>
    </allowedCultures>
    <settlementNameMaker>Donaustahl_SettlementNameMaker_General</settlementNameMaker>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
  </FactionDef>


  <!-- Democratic/Despotic -->
  <FactionDef ParentName="Donaustahl_Factionbase" Name="Donaustahl_Settler_Democratic">
  <defName>Donaustahl_Settler_Democratic</defName>
    <pawnSingular>settler</pawnSingular>
    <pawnsPlural>settlers</pawnsPlural>
    <categoryTag>Outlander</categoryTag>
    <listOrderPriority>21</listOrderPriority>
    <leaderTitle>overseer</leaderTitle>
    <factionIconPath>World/WorldObjects/Expanding/Town</factionIconPath>
    <structureMemeWeights>
      <Structure_TheistAbstract MayRequire="Ludeon.RimWorld.Ideology">1</Structure_TheistAbstract>
      <Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">2</Structure_Ideological>
    </structureMemeWeights>
    <backstoryFilters>
      <li>
        <categories>
          <li>Outlander</li>
        </categories>
        <commonality>1</commonality>
      </li>
    </backstoryFilters>
    <caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
      <li>Caravan_Outlander_PirateMerchant</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Outlander_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
    <raidLootMaker>OutlanderRaidLootMaker</raidLootMaker>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <!--Gentile-->
    <factionNameMaker>Donaustahl_FactionNameMaker_Democratic</factionNameMaker>
    <classicIdeo>true</classicIdeo>
    <colorSpectrum>
      <li>(0.35, 0.30, 0.60)</li>
      <li>(0.45, 0.40, 0.90)</li>
    </colorSpectrum>
    <configurationListOrderPriority>22</configurationListOrderPriority>
  </FactionDef>
  <!--Rough-->
  <FactionDef ParentName="Donaustahl_Settler_Democratic" Name="Donaustahl_Settler_Despotic" Abstract="True">
  <defName>Donaustahl_Settler_Despotic</defName>
    <factionNameMaker>Donaustahl_FactionNameMaker_Despotic</factionNameMaker>
    <classicIdeo>true</classicIdeo>
    <colorSpectrum>
      <li>(0, 0.4, 0.94)</li>
      <li>(0.64, 0.8, 1)</li>
    </colorSpectrum>
    <configurationListOrderPriority>23</configurationListOrderPriority>
  </FactionDef>

  <!-- Raider -->
  <FactionDef ParentName="Donaustahl_Factionbase" Name="Donaustahl_Raider">
  <defName>Donaustahl_Raider</defName>
    <pawnSingular>raider</pawnSingular>
    <pawnsPlural>raiders</pawnsPlural>
    <listOrderPriority>20</listOrderPriority>
    <leaderTitle>warlord</leaderTitle>
    <factionIconPath>World/WorldObjects/Expanding/PirateOutpost</factionIconPath>
    <factionNameMaker>Donaustahl_FactionNameMaker_Raider</factionNameMaker>
    <permanentEnemy>true</permanentEnemy>
    <requiredMemes>
      <!--<li
      MayRequire="Ludeon.RimWorld.Ideology">Raider</li>-->
    </requiredMemes>
    <backstoryFilters>
      <li>
        <categories>
          <li>Pirate</li>
        </categories>
      </li>
    </backstoryFilters>
    <raidLootMaker>PirateRaidLootMaker</raidLootMaker>
    <colorSpectrum>
      <li>(0.7, 0.1, 0.1)</li>
      <li>(0.9, 0.3, 0.3)</li>
    </colorSpectrum>
    <!--Global-->
    <label>wasteland raider gang</label>
    <description>Ruthless scavengers and murderers who live for the thrill of domination. They often
      mark their armor with blood and chems, worshiping violence as the only truth.</description>
  </FactionDef>

  <!-- Tribal -->
  <FactionDef ParentName="Donaustahl_Factionbase" Name="FalloutTribalClan">
  <defName>FalloutTribalClan</defName>
    <pawnSingular>tribal</pawnSingular>
    <pawnsPlural>tribals</pawnsPlural>
    <categoryTag>Tribal</categoryTag>
    <listOrderPriority>11</listOrderPriority>
    <leaderTitle>chief</leaderTitle>
    <factionIconPath>World/WorldObjects/Expanding/Village</factionIconPath>
    <techLevel>Neolithic</techLevel>
    <factionNameMaker>Donaustahl_FactionNameMaker_Tribal</factionNameMaker>
    <allowedCultures>
      <li>Corunan</li>
    </allowedCultures>
    <structureMemeWeights>
      <!--<Structure_Animist
      MayRequire="Ludeon.RimWorld.Ideology">3</Structure_Animist>-->
    </structureMemeWeights>
    <backstoryFilters>
      <li>
        <categories>
          <li>Tribal</li>
        </categories>
      </li>
    </backstoryFilters>
    <raidLootMaker>TribeRaidLootMaker</raidLootMaker>
    <allowedArrivalTemperatureRange>-40~55</allowedArrivalTemperatureRange>
    <colorSpectrum>
      <li>(0.3, 0.6, 0.2)</li>
      <li>(0.6, 0.9, 0.4)</li>
    </colorSpectrum>
    <!--Global-->
    <label>wasteland tribe</label>
    <description>Descendants of vault dwellers or surface survivors who abandoned technology
      generations ago. They worship spirits of the old world and wield makeshift weapons crafted
      from scrap and bone.</description>
  </FactionDef>

</Defs>