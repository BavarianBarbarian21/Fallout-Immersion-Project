<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Donaustahl: remove bossgroup caller comps added by other mods
       We target list entries by index so only the specific added entries are removed.
  -->

  <!-- Remove first and second <li> under comps for BurnoutMechlinkBooster -->
  <Operation Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="BurnoutMechlinkBooster"]/comps/li[1]</xpath>
  </Operation>
  <Operation Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="BurnoutMechlinkBooster"]/comps/li[2]</xpath>
  </Operation>

  <!-- Remove first and second <li> under comps for MechbandDish -->
  <Operation Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="MechbandDish"]/comps/li[1]</xpath>
  </Operation>
  <Operation Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="MechbandDish"]/comps/li[2]</xpath>
  </Operation>

  <!-- Remove fourth and fifth <li> under comps for CommsConsole -->
  <Operation Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="CommsConsole"]/comps/li[4]</xpath>
  </Operation>
  <Operation Class="PatchOperationRemove">
    <xpath>/Defs/ThingDef[defName="CommsConsole"]/comps/li[5]</xpath>
  </Operation>

</Patch>