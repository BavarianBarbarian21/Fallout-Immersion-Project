<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!-- Sentry Bot Rockets ThingDef -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="Mech_CentipedeBlaster"]</xpath>
		<value>
			<ThingDef ParentName="SuperHeavyMechanoid">
				<defName>Mech_CentipedeBlaster</defName>
				<label>Sentry Bot Siege</label>
				<description>A walking tank bristling with miniguns and missile pods. Once deployed, it is not a question of if it kills, but how much.</description>
				<statBases>
					<MoveSpeed>2</MoveSpeed>
				</statBases>
				<race>
					<body>Sentrybot</body>
					<lifeStageAges>
						<li>
							<def>MechanoidFullyFormed</def>
							<minAge>0</minAge>
							<soundWounded>Sentrybot_Wounded</soundWounded>
							<soundDeath>Sentrybot_Death</soundDeath>
							<soundCall>Sentrybot_Call</soundCall>
							<soundAngry>Sentrybot_Angry</soundAngry>
						</li>
					</lifeStageAges>
					<baseHealthScale>4</baseHealthScale>
				</race>
			</ThingDef>
		</value>
	</Operation>
	<!-- Sentry Bot Rockets PawnKindDef -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/PawnKindDef[defName="Mech_CentipedeBlaster"]</xpath>
		<value>
			<PawnKindDef ParentName="HeavyMechanoidKind">
				<defName>Mech_CentipedeBlaster</defName>
				<label>Sentry Bot Siege</label>
				<race>Mech_CentipedeBlaster</race>
				<combatPower>600</combatPower>
				<lifeStages>
					<li>
						<bodyGraphicData>
							<texPath>RobCo/Sentrybot/Sentrybot</texPath>
							<shaderType>CutoutWithOverlay</shaderType>
							<graphicClass>Graphic_Multi</graphicClass>
							<drawSize>1.5</drawSize>
							<shadowData>
								<volume>(0.3, 0.4, 0.3)</volume>
								<offset>(0,0,-0.25)</offset>
							</shadowData>
						</bodyGraphicData>
					</li>
				</lifeStages>
				<weaponTags>
					<li>MechanoidGunBreach</li>
				</weaponTags>
			</PawnKindDef>
		</value>
	</Operation>
	<!-- Sentry Bot Rockets RecipeDef -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/RecipeDef[defName="CentipedeBlaster"]</xpath>
		<value>
			<RecipeDef ParentName="SuperHeavyMechanoidRecipe">
				<defName>CentipedeBlaster</defName>
				<label>craft Sentry Bot Rockets</label>
				<description>Craft a Sentry Bot Rockets.</description>
				<products>
					<Mech_CentipedeBlaster>1</Mech_CentipedeBlaster>
				</products>
				<descriptionHyperlinks>
					<ThingDef>Mech_CentipedeBlaster</ThingDef>
				</descriptionHyperlinks>
			</RecipeDef>
		</value>
	</Operation>
</Patch>