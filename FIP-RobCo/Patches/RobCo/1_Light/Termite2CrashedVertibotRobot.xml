<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Constructron ThingDef -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="Mech_Termite"]</xpath>
		<value>
			<ThingDef ParentName="Floating">
				<defName>Mech_Termite</defName>
				<label>Crashed Vertibot Robot</label>
				<description>This is indeed a strange Robot.</description>
				<statBases>
					<MoveSpeed>2</MoveSpeed>
				</statBases>
				<race>
					<body>Eyebot</body>
					<lifeStageAges>
						<li>
							<def>MechanoidFullyFormed</def>
							<minAge>0</minAge>
							<soundWounded>Eyebot_Wounded</soundWounded>
							<soundDeath>Eyebot_Death</soundDeath>
							<soundCall>Eyebot_Call</soundCall>
							<soundAngry>Eyebot_Angry</soundAngry>
						</li>
					</lifeStageAges>
				</race>
			</ThingDef>
		</value>
	</Operation>
	<!-- Constructron PawnKindDef -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/PawnKindDef[defName="Mech_Termite_Breach"]</xpath>
		<value>
			<PawnKindDef ParentName="LightMechanoidKind">
				<defName>Mech_Termite_Breach</defName>
				<label>Crashed Vertibot Robot</label>
				<race>Mech_Termite</race>
				<combatPower>300</combatPower>
				<lifeStages>
					<li>
						<bodyGraphicData>
							<texPath>RobCo/EyebotBoss/EyebotBoss</texPath>
							<shaderType>CutoutWithOverlay</shaderType>
							<graphicClass>Graphic_Multi</graphicClass>
							<drawSize>1.25</drawSize>
							<shadowData>
								<volume>(0.3, 0.4, 0.3)</volume>
								<offset>(0,0,-0.25)</offset>
							</shadowData>
						</bodyGraphicData>
					</li>
				</lifeStages>
				<weaponTags>
					<li>MechanoidGunLongRange</li>
				</weaponTags>
			</PawnKindDef>
		</value>
	</Operation>
</Patch>