<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Collectron ThingDef -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="Mech_Lifter"]</xpath>
		<value>
			<ThingDef ParentName="LightMechanoid">
				<defName>Mech_Lifter</defName>
				<label>Collectron</label>
				<description>A scavenger drone, endlessly trundling after cans, junk, or “valuable
					resources.” Programmed to hoard like a metallic raccoon.</description>
				<statBases>
					<MoveSpeed>2</MoveSpeed>
				</statBases>
				<race>
					<body>Protectron</body>
					<mechEnabledWorkTypes>
						<li>Hauling</li>
						<li>PlantCutting</li>
					</mechEnabledWorkTypes>
					<lifeStageAges>
						<li>
							<def>MechanoidFullyFormed</def>
							<minAge>0</minAge>
							<soundWounded>Protectron_Wounded</soundWounded>
							<soundDeath>Protectron_Death</soundDeath>
							<soundCall>Protectron_Call</soundCall>
							<soundAngry>Protectron_Angry</soundAngry>
						</li>
					</lifeStageAges>
				</race>
			</ThingDef>
		</value>
	</Operation>
	<!-- Collectron PawnKindDef -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/PawnKindDef[defName="Mech_Lifter"]</xpath>
		<value>
			<PawnKindDef ParentName="LightMechanoidKind">
				<defName>Mech_Lifter</defName>
				<label>Collectron</label>
				<race>Mech_Lifter</race>
				<combatPower>10</combatPower>
				<lifeStages>
					<li>
						<bodyGraphicData>
							<texPath>RobCo/Collectron/Collectron</texPath>
							<shaderType>CutoutWithOverlay</shaderType>
							<graphicClass>Graphic_Multi</graphicClass>
							<drawSize>1.25</drawSize>
							<shadowData>
								<volume>(0.3, 0.4, 0.3)</volume>
								<offset>(0,0,-0.25)</offset>
							</shadowData>
						</bodyGraphicData>
					</li>
				</lifeStages>
				<weaponTags>
					<li>MechanoidGunSpiner</li>
				</weaponTags>
			</PawnKindDef>
		</value>
	</Operation>
	<!-- Collectron RecipeDef -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/RecipeDef[defName="Lifter"]</xpath>
		<value>
			<RecipeDef ParentName="LightMechanoidRecipe">
				<defName>Lifter</defName>
				<label>craft Collectron</label>
				<description>Craft an Collectron.</description>
				<products>
					<Mech_Lifter>1</Mech_Lifter>
				</products>
				<descriptionHyperlinks>
					<ThingDef>Mech_Lifter</ThingDef>
				</descriptionHyperlinks>
			</RecipeDef>
		</value>
	</Operation>
</Patch>