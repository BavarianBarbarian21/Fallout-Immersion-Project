<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Change Mechlink to Pipboy -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="Mechlink"]/label</xpath>
		<value>
			<label>Pipboy</label>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="Mechlink"]/description</xpath>
		<value>
			<description>The Pipboy is a wrist-mounted device used to control RobCo robots. It
				provides remote access, status monitoring, and direct command capabilities for all
				RobCo robot units.</description>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="Mechlink"]/graphicData/texPath</xpath>
		<value>
			<texPath>RobCo/Misc/Pipboy</texPath>
		</value>
	</Operation>
	<!-- ControlSublinkImplant HediffDef -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="ControlSublink"]/label</xpath>
		<value>
			<label>Pipboy Control Holotape</label>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="ControlSublink"]/description</xpath>
		<value>
			<description>A holotape for the Pipboy, used to expand control groups for RobCo robots.
				Insert into the Pipboy to upgrade your robot command capabilities.</description>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/ThingDef[defName="ControlSublink"]</xpath>
		<value>
			<graphicData>
				<texPath>RobCo/Misc/Holotape</texPath>
			</graphicData>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/HediffDef[defName="ControlSublinkImplant"]/description</xpath>
		<value>
			<description>A Pipboy holotape which increases a mechanic's control group count and the
				work speed of a mechanic's robots. This advanced sublink is encoded with proprietary
				RobCo firmware for optimal control and reliability. Can be installed up to 6 times
				for maximum effect.</description>
		</value>
	</Operation>
