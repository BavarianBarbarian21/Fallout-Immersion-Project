<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- AncientExostriderRemains -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="AncientExostriderRemains"]/label</xpath>
		<value>
			<label>crashed Vertibot</label>
		</value>
	</Operation>
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="AncientExostriderRemains"]/description</xpath>
		<value>
			<description>The remains of a Vertibot, a pre-war military transport aircraft. Scattered
				with pre-war tech.</description>
		</value>
	</Operation>
	<!-- Patch letterText for CompProperties_ProximityLetter -->
	<Operation Class="PatchOperationReplace">
		<xpath>
			/Defs/ThingDef[defName="AncientExostriderRemains"]/comps/li[@Class="CompProperties_ProximityLetter"]/letterText</xpath>
		<value>
			<letterText>A crashed Vertibot lies here, its hull twisted and scorched. Pre-war
				technology and secrets may be hidden within the wreckage.</letterText>
		</value>
	</Operation>
	<!-- Patch letterText for CompProperties_LeavingsLetter -->
	<Operation Class="PatchOperationReplace">
		<xpath>
			/Defs/ThingDef[defName="AncientExostriderRemains"]/comps/li[@Class="CompProperties_LeavingsLetter"]/letterText</xpath>
		<value>
			<letterText>The Vertibot wreckage has been disturbed, scattering remnants of pre-war
				tech and memories of its final flight.</letterText>
		</value>
	</Operation>
	<!-- AncientExostriderHead -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="AncientExostriderHead"]/label</xpath>
