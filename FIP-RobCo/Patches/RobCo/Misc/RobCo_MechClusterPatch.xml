<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationReplace" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/IncidentDef[defName="MechCluster"]/label</xpath>
				<value>
					<label>RobCo robot army</label>
				</value>
			</li>
			<li Class="PatchOperationReplace" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/IncidentDef[defName="MechCluster"]/letterLabel</xpath>
				<value>
					<letterLabel>RobCo robot army incoming</letterLabel>
				</value>
			</li>
			<li Class="PatchOperationReplace" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/IncidentDef[defName="MechCluster"]/letterText</xpath>
				<value>
					<letterText>A RobCo robot army and defenses has landed nearby. Prepare for a
						tough fight!</letterText>
				</value>
			</li>
			<li Class="PatchOperationReplace" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/ThingDef[defName="ShieldGeneratorBullets"]/label</xpath>
				<value>
					<label>RobCo bullet shield generator</label>
				</value>
			</li>
			<li Class="PatchOperationReplace" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/ThingDef[defName="ShieldGeneratorMortar"]/label</xpath>
				<value>
					<label>RobCo mortar shield generator</label>
				</value>
			</li>
			<li Class="PatchOperationReplace" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/ThingDef[defName="MechCapsule"]/label</xpath>
				<value>
					<label>RobCo robot capsule</label>
				</value>
			</li>
			<li Class="PatchOperationReplace" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/ThingDef[defName="MechCapsule"]/description</xpath>
				<value>
					<description>A RobCo capsule for deploying robots. Contains pre-war robots ready
						for action.</description>
				</value>
			</li>
			<li Class="PatchOperationReplace" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/ThingDef[defName="MechAssembler"]/label</xpath>
				<value>
					<label>RobCo robot assembler</label>
				</value>
			</li>
			<li Class="PatchOperationReplace" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/ThingDef[defName="MechAssembler"]/description</xpath>
				<value>
					<description>A RobCo device for assembling and repairing robots.</description>
				</value>
			</li>
			<li Class="PatchOperationReplace" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/ThingDef[defName="MechDropBeacon"]/label</xpath>
				<value>
					<label>RobCo robot drop beacon</label>
				</value>
			</li>
			<li Class="PatchOperationReplace" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/ThingDef[defName="MechDropBeacon"]/description</xpath>
				<value>
					<description>A RobCo beacon for guiding robot drops.</description>
				</value>
			</li>
			<li Class="PatchOperationReplace" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/ThingDef[defName="UnstablePowerCell"]/description</xpath>
				<value>
					<description>A volatile RobCo power cell. Handle with extreme caution!</description>
				</value>
			</li>
			<li Class="PatchOperationReplace" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/ThingDef[defName="Defoliator"]/description</xpath>
				<value>
					<description>A RobCo device designed to clear vegetation. Emits hazardous
						energy.</description>
				</value>
			</li>
			<li Class="PatchOperationReplace" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/ThingDef[defName="OrbitalTargeterMechCluster"]/label</xpath>
				<value>
					<label>RobCo orbital robot army targeter</label>
				</value>
			</li>
			<li Class="PatchOperationReplace" MayRequire="Ludeon.Rimworld.Royalty">
				<xpath>/Defs/ThingDef[defName="OrbitalTargeterMechCluster"]/description</xpath>
				<value>
					<description>A RobCo device for targeting orbital robot army deployments.</description>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>