<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Mister Gutsy Chopper ThingDef -->
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/ThingDef[defName="Mech_Scyther"]</xpath>
		<value>
			<ThingDef ParentName="Floating">
				<defName>Mech_Scyther</defName>
				<label>Mister Gutsy Chopper</label>
				<description>Military-grade Handy, loudmouthed and merciless, with plasma weaponry
					and a drill-sergeant personality.</description>
				<statBases>
					<MoveSpeed>5</MoveSpeed>
				</statBases>
				<race>
					<body>Handy</body>
					<lifeStageAges>
						<li>
							<def>MechanoidFullyFormed</def>
							<minAge>0</minAge>
							<soundWounded>Gutsy_Wounded</soundWounded>
							<soundDeath>Gutsy_Death</soundDeath>
							<soundCall>Gutsy_Call</soundCall>
							<soundAngry>Gutsy_Angry</soundAngry>
						</li>
						<li>
							<def>MechanoidFullyFormed</def>
							<minAge>10</minAge>
							<soundWounded>Gutsy_Wounded</soundWounded>
							<soundDeath>Gutsy_Death</soundDeath>
							<soundCall>Gutsy_Call</soundCall>
							<soundAngry>Gutsy_Angry</soundAngry>
						</li>
					</lifeStageAges>
					<baseHealthScale>2</baseHealthScale>
				</race>
				<tools>
					<li>
						<label>sawblade</label>
						<capacities>
							<li>Cut</li>
						</capacities>
						<power>10</power>
						<cooldownTime>2</cooldownTime>
						<chanceFactor>1</chanceFactor>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
