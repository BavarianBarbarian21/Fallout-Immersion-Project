<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- ================= PACIFICATOR ROCKET BULLET ================= -->
    <ThingDef ParentName="BaseBullet">
        <defName>RobCo_Bullet_PacificatorRocket</defName>
        <label>pacificator rocket</label>
        <graphicData>
            <texPath>Things/Projectile/Missile_Small</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile>
            <damageDef>Bomb</damageDef>
            <damageAmountBase>22</damageAmountBase>
            <explosionRadius>2.5</explosionRadius>
            <speed>60</speed>
            <stoppingPower>0</stoppingPower>
        </projectile>
    </ThingDef>

    <!-- ================= PACIFICATOR ROCKET LAUNCHER ================= -->
    <ThingDef ParentName="RobCo_BaseGun">
        <defName>RobCo_PacificatorRocket</defName>
        <label>pacificator rocket launcher</label>
        <description>Integrated rocket launcher mounted on a Pacificator combat platform.</description>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <defaultProjectile>RobCo_Bullet_PacificatorRocket</defaultProjectile>
                <warmupTime>2.5</warmupTime>
                <range>32</range>
                <burstShotCount>1</burstShotCount>
                <soundCast>Shot_IncendiaryLauncher</soundCast>
                <soundCastTail>GunTail_Heavy</soundCastTail>
                <muzzleFlashScale>2.0</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>rocket launcher</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>3.5</cooldownTime>
            </li>
        </tools>
    </ThingDef>

