<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- ================= SECURITRON LASER BULLET ================= -->
    <ThingDef ParentName="RobCo_BaseBullet">
        <defName>RobCo_Bullet_SecuritronLaser</defName>
        <label>securitron laser</label>
        <projectile>
            <damageDef>Bullet</damageDef>
            <damageAmountBase>12</damageAmountBase>
            <armorPenetrationBase>0.45</armorPenetrationBase>
            <speed>85</speed>
            <stoppingPower>0.8</stoppingPower>
        </projectile>
    </ThingDef>

    <!-- ================= SECURITRON LASER WEAPON ================= -->
    <ThingDef ParentName="RobCo_BaseGun">
        <defName>RobCo_SecuritronLaser</defName>
        <label>securitron laser cannon</label>
        <description>Integrated laser cannon mounted on a Securitron security platform.</description>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <defaultProjectile>RobCo_Bullet_SecuritronLaser</defaultProjectile>
                <warmupTime>1.8</warmupTime>
                <range>28</range>
                <burstShotCount>2</burstShotCount>
                <ticksBetweenBurstShots>15</ticksBetweenBurstShots>
                <soundCast>Shot_ChargeRifle</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>1.5</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>laser cannon</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>6</power>
                <cooldownTime>2.5</cooldownTime>
            </li>
        </tools>
    </ThingDef>

    <!-- ================= SECURITRON ELECTROSHOCK BULLET ================= -->
    <ThingDef ParentName="BaseBullet">
        <defName>RobCo_Bullet_Electroshock</defName>
        <label>electroshock bolt</label>
        <graphicData>
            <texPath>Things/Projectile/Plasma</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
        <projectile>
            <damageDef>EMP</damageDef>
            <damageAmountBase>8</damageAmountBase>
            <speed>70</speed>
            <stoppingPower>0.5</stoppingPower>
        </projectile>
    </ThingDef>

    <!-- ================= SECURITRON ELECTROSHOCK WEAPON (Mark II) ================= -->
    <ThingDef ParentName="RobCo_BaseGun">
        <defName>RobCo_SecuritronElectroshock</defName>
        <label>securitron electroshock prod</label>
        <description>Non-lethal electroshock system integrated into a Securitron Mark II.</description>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <defaultProjectile>RobCo_Bullet_Electroshock</defaultProjectile>
                <warmupTime>2.0</warmupTime>
                <range>20</range>
                <burstShotCount>2</burstShotCount>
                <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
                <soundCast>Shot_Plasma</soundCast>
                <soundCastTail>GunTail_Light</soundCastTail>
                <muzzleFlashScale>1.2</muzzleFlashScale>
            </li>
        </verbs>
        <tools>
            <li>
                <label>electroshock prod</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>5</power>
                <cooldownTime>2.0</cooldownTime>
            </li>
        </tools>
    </ThingDef>
</Defs>
