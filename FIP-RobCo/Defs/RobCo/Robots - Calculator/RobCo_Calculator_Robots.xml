<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- ================= SECURITRON MARK I BASE ================= -->
    <ThingDef Name="RobCo_SecuritronMkIBase" ParentName="BaseMechanoid" Abstract="True">
        <statBases>
            <MarketValue>2500</MarketValue>
            <MoveSpeed>3.2</MoveSpeed>
            <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.55</ArmorRating_Sharp>
            <MechEnergyLossPerHP>0.45</MechEnergyLossPerHP>
        </statBases>
        <race>
            <body>RobCo_SecuritronMkI</body>
            <intelligence>ToolUser</intelligence>
            <thinkTreeMain>Mechanoid</thinkTreeMain>
            <baseBodySize>1.0</baseBodySize>
            <baseHealthScale>2.0</baseHealthScale>
            <mechWeightClass>Light</mechWeightClass>
            <lifeStageAges>
                <li>
                    <def>MechanoidFullyFormed</def>
                    <minAge>0</minAge>
                    <soundWounded>RobCo_Securitron_Wounded</soundWounded>
                    <soundDeath>RobCo_Securitron_Death</soundDeath>
                    <soundCall>RobCo_Securitron_Call</soundCall>
                    <soundAngry>RobCo_Securitron_Angry</soundAngry>
                </li>
            </lifeStageAges>
        </race>
        <butcherProducts>
            <Steel>12</Steel>
        </butcherProducts>
        <tools>
            <li>
                <label>mechanical hands</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>8</power>
                <cooldownTime>1.6</cooldownTime>
                <linkedBodyPartsGroup>Torso</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
            </li>
        </tools>
    </ThingDef>
    <RecipeDef Name="RobCo_SecuritronMkIBase_Recipe" ParentName="BaseMechanoidRecipe" Abstract="True">
        <researchPrerequisite>BasicMechtech</researchPrerequisite>
        <gestationCycles>3</gestationCycles>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Steel</li>
                    </thingDefs>
                </filter>
                <count>120</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>2</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>SubcoreBasic</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <displayPriority>250</displayPriority>
    </RecipeDef>

    <!-- ================= SECURITRON MARK I ================= -->
    <ThingDef ParentName="RobCo_SecuritronMkIBase">
        <defName>RobCo_SecuritronMkI</defName>
        <label>Securitron Mark I</label>
        <description>A classic Securitron Mark I security robot. Equipped with an integrated laser cannon for lethal enforcement. Reliable and deadly.</description>
    </ThingDef>
    <PawnKindDef ParentName="LightMechanoidKind">
        <defName>RobCo_SecuritronMkI</defName>
        <label>Securitron Mark I</label>
        <race>RobCo_SecuritronMkI</race>
        <combatPower>200</combatPower>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>RobCo/Calculator/Securitron/SecuritronMkI</texPath>
                    <shaderType>CutoutWithOverlay</shaderType>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <drawSize>1.3</drawSize>
                    <shadowData>
                        <volume>(0.35, 0.35, 0.35)</volume>
                        <offset>(0,0,-0.25)</offset>
                    </shadowData>
                </bodyGraphicData>
            </li>
        </lifeStages>
        <weaponTags>
            <li>RobCo_SecuritronLaser</li>
        </weaponTags>
    </PawnKindDef>
    <RecipeDef ParentName="RobCo_SecuritronMkIBase_Recipe">
        <defName>RobCo_SecuritronMkI_Recipe</defName>
        <label>craft Securitron Mark I</label>
        <description>Craft a Securitron Mark I security platform.</description>
        <products>
            <RobCo_SecuritronMkI>1</RobCo_SecuritronMkI>
        </products>
        <descriptionHyperlinks>
            <ThingDef>RobCo_SecuritronMkI</ThingDef>
        </descriptionHyperlinks>
    </RecipeDef>

