<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- ================= LIBERATOR BODY ================= -->
    <BodyDef>
        <defName>RobCo_Liberator</defName>
        <label>liberator</label>
        <corePart>
            <def>RobCo_Chassis</def>
            <height>Middle</height>
            <depth>Outside</depth>
            <groups>
                <li>Torso</li>
            </groups>
            <parts>
                <li>
                    <def>RobCo_Processor</def>
                    <coverage>0.08</coverage>
                    <depth>Inside</depth>
                </li>
                <li>
                    <def>Reactor</def>
                    <coverage>0.08</coverage>
                    <depth>Inside</depth>
                </li>
                <li>
                    <def>FluidReprocessor</def>
                    <coverage>0.05</coverage>
                    <depth>Inside</depth>
                </li>
                <li>
                    <def>MechanicalNeck</def>
                    <coverage>0.12</coverage>
                    <height>Top</height>
                    <parts>
                        <li>
                            <def>MechanicalHead</def>
                            <coverage>0.85</coverage>
                            <parts>
                                <li>
                                    <def>RobCo_Scanner</def>
                                    <coverage>0.15</coverage>
                                </li>
                                <li>
                                    <def>RobCo_Microphone</def>
                                    <coverage>0.12</coverage>
                                </li>
                                <li>
                                    <def>SmellSensor</def>
                                    <coverage>0.12</coverage>
                                </li>
                            </parts>
                        </li>
                    </parts>
                </li>
                <li>
                    <def>MechanicalShoulder</def>
                    <customLabel>left shoulder</customLabel>
                    <coverage>0.15</coverage>
                    <parts>
                        <li>
                            <def>MechanicalArm</def>
                            <coverage>0.15</coverage>
                            <depth>Inside</depth>
                        </li>
                        <li>
                            <def>MechanicalHand</def>
                            <customLabel>left mechanical hand</customLabel>
                            <coverage>0.48</coverage>
                            <parts>
                                <li>
                                    <def>MechanicalFinger</def>
                                    <customLabel>left finger 1</customLabel>
                                    <coverage>0.12</coverage>
                                </li>
                                <li>
                                    <def>MechanicalFinger</def>
                                    <customLabel>left finger 2</customLabel>
                                    <coverage>0.12</coverage>
                                </li>
                                <li>
                                    <def>MechanicalFinger</def>
                                    <customLabel>left finger 3</customLabel>
                                    <coverage>0.12</coverage>
                                </li>
                            </parts>
                        </li>
                    </parts>
                </li>
                <li>
                    <def>MechanicalShoulder</def>
                    <customLabel>right shoulder</customLabel>
                    <coverage>0.15</coverage>
                    <parts>
                        <li>
                            <def>MechanicalArm</def>
                            <customLabel>right arm</customLabel>
                            <coverage>0.82</coverage>
                            <parts>
                                <li>
                                    <def>MechanicalHand</def>
                                    <customLabel>right mechanical hand</customLabel>
                                    <coverage>0.48</coverage>
                                    <parts>
                                        <li>
                                            <def>MechanicalFinger</def>
                                            <customLabel>right finger 1</customLabel>
                                            <coverage>0.12</coverage>
                                        </li>
                                        <li>
                                            <def>MechanicalFinger</def>
                                            <customLabel>right finger 2</customLabel>
                                            <coverage>0.12</coverage>
                                        </li>
                                        <li>
                                            <def>MechanicalFinger</def>
                                            <customLabel>right finger 3</customLabel>
                                            <coverage>0.12</coverage>
                                        </li>
                                    </parts>
                                </li>
                            </parts>
                        </li>
                    </parts>
                </li>
                <li>
                    <def>MechanicalLeg</def>
                    <customLabel>left leg</customLabel>
                    <coverage>0.18</coverage>
                </li>
                <li>
                    <def>MechanicalLeg</def>
                    <customLabel>right leg</customLabel>
                    <coverage>0.18</coverage>
                </li>
            </parts>
        </corePart>
    </BodyDef>

