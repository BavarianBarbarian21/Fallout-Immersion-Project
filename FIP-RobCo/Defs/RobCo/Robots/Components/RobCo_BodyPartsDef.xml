<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!--======== Group parts for Robco robots ========-->
    <!-- Weapon for some bots other use left and right power claws -->

    <!-- Handy melee weapon-->
    <BodyPartGroupDef>
        <defName>PowerClaw</defName>
        <label>Power claw</label>
        <labelShort>power claw</labelShort>
    </BodyPartGroupDef>
    
    <!--======== Common to various Robots ========-->

    <BodyPartDef ParentName="MechanicalThorax">
        <defName>RobCo_Chassis</defName>
        <label>chassis</label>
    </BodyPartDef>
    
    <BodyPartDef>
        <defName>RobCo_Processor</defName>
        <label>processor</label>
        <hitPoints>10</hitPoints>
        <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
        <skinCovered>false</skinCovered>
        <solid>true</solid>
        <alive>false</alive>
        <bleedRate>0</bleedRate>
        <tags>
            <li>ConsciousnessSource</li>
        </tags>
    </BodyPartDef>

    <BodyPartDef>
        <defName>Robco_Reactor</defName>
        <label>reactor</label>
        <hitPoints>20</hitPoints>
        <permanentInjuryChanceFactor>0</permanentInjuryChanceFactor>
