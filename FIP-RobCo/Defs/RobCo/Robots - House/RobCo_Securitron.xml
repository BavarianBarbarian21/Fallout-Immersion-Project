<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- ================= SECURITRON BASE ================= -->
    <ThingDef Name="RobCo_SecuritronBase" ParentName="BaseMechanoid" Abstract="True">
        <statBases>
            <MarketValue>1200</MarketValue>
            <MoveSpeed>2.5</MoveSpeed>
            <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.45</ArmorRating_Sharp>
            <MechEnergyLossPerHP>0.60</MechEnergyLossPerHP>
        </statBases>
        <race>
            <intelligence>ToolUser</intelligence>
            <thinkTreeMain>Mechanoid</thinkTreeMain>
            <baseBodySize>1.0</baseBodySize>
            <baseHealthScale>1.8</baseHealthScale>
            <mechWeightClass>Light</mechWeightClass>
            <lifeStageAges>
                <li>
                    <def>MechanoidFullyFormed</def>
                    <minAge>0</minAge>
                    <soundWounded>RobCo_Eyebot_Wounded</soundWounded>
                    <soundDeath>RobCo_Eyebot_Death</soundDeath>
                    <soundCall>RobCo_Eyebot_Call</soundCall>
                    <soundAngry>RobCo_Eyebot_Angry</soundAngry>
                </li>
            </lifeStageAges>
        </race>
        <butcherProducts>
            <Steel>12</Steel>
        </butcherProducts>
        <tools>
            <li>
                <label>chassis</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>8</power>
                <cooldownTime>2.4</cooldownTime>
                <linkedBodyPartsGroup>RobCo_Tool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
            </li>
        </tools>
    </ThingDef>
    <RecipeDef Name="RobCo_SecuritronBase_Recipe" ParentName="BaseMechanoidRecipe" Abstract="True">
        <researchPrerequisite>BasicMechtech</researchPrerequisite>
        <gestationCycles>2</gestationCycles>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>Steel</li>
                    </thingDefs>
                </filter>
                <count>120</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>ComponentIndustrial</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>SubcoreBasic</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <displayPriority>200</displayPriority>
    </RecipeDef>

    <!-- ================= SECURITRON MARK I ================= -->
    <ThingDef ParentName="RobCo_SecuritronBase">
        <defName>RobCo_SecuritronMkI</defName>
        <label>Securitron Mark I</label>
        <description>A casino security robot, essentially a floating defensive gun platform. Equipped with lethal weaponry and an insufferable personality. Surprisingly effective at its job.</description>
        <race>
            <body>RobCo_SecuritronMkI</body>
        </race>
    </ThingDef>
    <PawnKindDef ParentName="LightMechanoidKind">
        <defName>RobCo_SecuritronMkI</defName>
        <label>Securitron Mark I</label>
        <race>RobCo_SecuritronMkI</race>
        <combatPower>120</combatPower>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>RobCo/Calculator/Securitron/SecuritronMkI</texPath>
                    <shaderType>CutoutWithOverlay</shaderType>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <drawSize>1.25</drawSize>
                    <shadowData>
                        <volume>(0.3, 0.4, 0.3)</volume>
                        <offset>(0,0,-0.25)</offset>
                    </shadowData>
                </bodyGraphicData>
            </li>
        </lifeStages>
        <weaponTags>
            <li>RobCo_Laser_Combat</li>
        </weaponTags>
    </PawnKindDef>
    <RecipeDef ParentName="RobCo_SecuritronBase_Recipe">
        <defName>RobCo_SecuritronMkI_Recipe</defName>
        <label>craft Securitron Mark I</label>
        <description>Craft a Securitron Mark I.</description>
        <products>
            <RobCo_SecuritronMkI>1</RobCo_SecuritronMkI>
        </products>
        <descriptionHyperlinks>
            <ThingDef>RobCo_SecuritronMkI</ThingDef>
        </descriptionHyperlinks>
    </RecipeDef>

    <!-- ================= SECURITRON MARK II ================= -->
    <ThingDef ParentName="RobCo_SecuritronBase">
        <defName>RobCo_SecuritronMkII</defName>
        <label>Securitron Mark II</label>
        <description>An upgraded Securitron model with non-lethal capabilities. Equipped with electric shock prods and riot foam, it excels at law enforcement and prisoner management. Can handle warden duties.</description>
        <race>
            <body>RobCo_SecuritronMkII</body>
            <mechEnabledWorkTypes>
                <li>Warden</li>
            </mechEnabledWorkTypes>
        </race>
        <statBases>
            <MarketValue>1500</MarketValue>
        </statBases>
    </ThingDef>
    <PawnKindDef ParentName="LightMechanoidKind">
        <defName>RobCo_SecuritronMkII</defName>
        <label>Securitron Mark II</label>
        <race>RobCo_SecuritronMkII</race>
        <combatPower>130</combatPower>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>RobCo/Calculator/Securitron/SecuritronMkII</texPath>
                    <shaderType>CutoutWithOverlay</shaderType>
                    <graphicClass>Graphic_Multi</graphicClass>
                    <drawSize>1.25</drawSize>
                    <shadowData>
                        <volume>(0.3, 0.4, 0.3)</volume>
                        <offset>(0,0,-0.25)</offset>
                    </shadowData>
                </bodyGraphicData>
            </li>
        </lifeStages>
        <weaponTags>
            <li>RobCo_Electroshock</li>
        </weaponTags>
    </PawnKindDef>
    <RecipeDef ParentName="RobCo_SecuritronBase_Recipe">
        <defName>RobCo_SecuritronMkII_Recipe</defName>
        <label>craft Securitron Mark II</label>
        <description>Craft a Securitron Mark II.</description>
        <products>
            <RobCo_SecuritronMkII>1</RobCo_SecuritronMkII>
        </products>
        <descriptionHyperlinks>
            <ThingDef>RobCo_SecuritronMkII</ThingDef>
        </descriptionHyperlinks>
    </RecipeDef>
</Defs>
