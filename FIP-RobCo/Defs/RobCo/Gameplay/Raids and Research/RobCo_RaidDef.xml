<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- RobCo Broken Eyebot Frame -->
    <ThingDef ParentName="MechResourceBase">
        <defName>RobCo_BrokenEyebotFrame</defName>
        <label>Broken Eyebot Frame</label>
        <description>Broken Pieces of an Eyebot. A mechanic can study these parts to help unlock higher tiers of RobCo research.</description>
        <graphicData>
            <texPath>RobCo/Misc/BrokenEyebotFrame</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <Flammability>0</Flammability>
        </statBases>
        <comps>
            <li Class="CompProperties_CompAnalyzableUnlockResearch">
                <!--No idea what analysisID does but I changed it.-->
                <analysisID>15001500</analysisID>
                <requiresMechanitor>true</requiresMechanitor>
                <!-- Analyzable -->
                <analysisDurationHours>0.5</analysisDurationHours>
                <destroyedOnAnalyzed>false</destroyedOnAnalyzed>
                <completedLetterLabel>Broken Eyebot frame studied: {RESEARCH} unlocked</completedLetterLabel>
                <completedLetter>By studying the broken Eyebot frame, {PAWN_labelShort} has acquired the insight needed for the research project(s) {RESEARCH}.\n\nYour researchers can now use research benches to begin researching how to actually use the technology.</completedLetter>
                <completedLetterDef>PositiveEvent</completedLetterDef>
                <!-- Interactable -->
                <activateTexPath>UI/Icons/Study</activateTexPath>
                <activateLabelString>Analyze...</activateLabelString>
                <activateDescString>Analyze the broken Eyebot frame.</activateDescString>
                <jobString>Analyze broken Eyebot frame</jobString>
                <guiLabelString>Choose who should analyze this</guiLabelString>
                <inspectString>Can be analyzed by a colonist.</inspectString>
                <targetingParameters>
                    <canTargetBuildings>false</canTargetBuildings>
                    <canTargetAnimals>false</canTargetAnimals>
                    <canTargetMechs>false</canTargetMechs>
                    <onlyTargetControlledPawns>true</onlyTargetControlledPawns>
                </targetingParameters>
            </li>
        </comps>
    </ThingDef>

<!-- RobCo Comms Console -->
    <ThingDef ParentName="BuildingBase">
        <defName>RobCo_CommsConsole</defName>
        <label>RobCo Comms Console</label>
        <description>Comms console with RobCo bossgroup functionality.</description>
        <thingClass>Building_CommsConsole</thingClass>
        <graphicData>
            <texPath>Things/Building/Misc/CommsConsole</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(5,4)</drawSize>
            <damageData>
                <rect>(0,0,3,1.8)</rect>
                <cornerBL>Damage/Corner</cornerBL>
                <cornerBR>Damage/Corner</cornerBR>
            </damageData>
            <shadowData>
                <volume>(3,0.5,2)</volume>
            </shadowData>
        </graphicData>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>50</pathCost>
        <blockWind>true</blockWind>
        <castEdgeShadows>false</castEdgeShadows>
        <fillPercent>0.5</fillPercent>
        <canOverlapZones>false</canOverlapZones>
        <statBases>
            <MaxHitPoints>250</MaxHitPoints>
            <WorkToBuild>2200</WorkToBuild>
            <Flammability>0.6</Flammability>
        </statBases>
        <size>(3,2)</size>
        <building>
            <destroySound>BuildingDestroyed_Metal_Big</destroySound>
        </building>
        <costList>
            <Steel>120</Steel>
            <ComponentIndustrial>4</ComponentIndustrial>
        </costList>
        <defaultPlacingRot>South</defaultPlacingRot>
        <interactionCellOffset>(0,0,2)</interactionCellOffset>
        <hasInteractionCell>true</hasInteractionCell>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <designationCategory>Misc</designationCategory>
        <uiOrder>2100</uiOrder>
        <comps Inherit="False">
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>true</shortCircuitInRain>
                <basePowerConsumption>200</basePowerConsumption>
            </li>
            <li Class="CompProperties_Flickable"/>
            <li Class="CompProperties_Breakdownable"/>
            <li Class="CompProperties_Usable">
                <useJob>TriggerObject</useJob>
                <useLabel>Call Vertibot threat</useLabel>
                <useDuration>900</useDuration>
                <floatMenuOptionPriority>SummonThreat</floatMenuOptionPriority>
                <floatMenuFactionIcon>Mechanoid</floatMenuFactionIcon>
                <ignoreOtherReservations>true</ignoreOtherReservations>
            </li>
            <li Class="CompProperties_Useable_CallBossgroup" MayRequire="Ludeon.RimWorld.Biotech">
                <bossgroupDef>RobCo_EyebotCrashed</bossgroupDef>
                <spawnLetterLabelKey>LetterLabelCommsConsoleSpawned</spawnLetterLabelKey>
                <spawnLetterTextKey>LetterCommsConsoleSpawned</spawnLetterTextKey>
                <effecterDef>CommsConsoleBossgroupSummoned</effecterDef>
                <delayTicks>120</delayTicks>
            </li>
        </comps>
        <designationHotKey>Misc3</designationHotKey>
        <placeWorkers>
            <li>PlaceWorker_PreventInteractionSpotOverlap</li>
        </placeWorkers>
        <researchPrerequisites>
            <li>MicroelectronicsBasics</li>
        </researchPrerequisites>
        <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
        <tickerType MayRequire="Ludeon.RimWorld.Biotech">Normal</tickerType>
    </ThingDef>

