    <xpath>Defs/FactionDef[defName="PlayerTribe"]/label</xpath>
    <value>
      <label>New Pueblo</label>
    </value>
  </Operation>

    <Operation Class="PatchOperationReplace">
      <xpath>Defs/FactionDef[defName="PlayerTribe"]/allowedCultures</xpath>
      <value>
        <allowedCultures><li>HHTools_Culture_American_Tribal</li></allowedCultures>
      </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
      <xpath>Defs/FactionDef[defName="PlayerTribe"]/settlementNameMaker</xpath>
      <value>
        <settlementNameMaker>HHTools_SettlementNameMaker_General</settlementNameMaker>
      </value>
    </Operation>

    <Operation Class="PatchOperationReplace">
      <xpath>Defs/FactionDef[defName="PlayerTribe"]/factionNameMaker</xpath>
      <value>
        <factionNameMaker>HHTools_FactionNameMaker_Tribal</factionNameMaker>
      </value>
    </Operation>
