<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="PlayerColony"]/label</xpath>
    <value>
      <label>New Settlement</label>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/FactionDef[defName="PlayerColony"]/description</xpath>
    <value>
      <description>A new settlement of various outcasts and wanderers.</description>
  </value>
</Operation>

<Operation Class="PatchOperationReplace">
  <xpath>Defs/FactionDef[defName="PlayerColony"]/allowedCultures</xpath>
  <value>
    <allowedCultures>
      <li>HHTools_Culture_American</li>
    </allowedCultures>
  </value>
</Operation>

<Operation Class="PatchOperationReplace">
  <xpath>Defs/FactionDef[defName="PlayerColony"]/settlementNameMaker</xpath>
  <value>
    <settlementNameMaker>HHTools_SettlementNameMaker_General</settlementNameMaker>
  </value>
</Operation>

<Operation Class="PatchOperationReplace">
  <xpath>Defs/FactionDef[defName="PlayerColony"]/factionNameMaker</xpath>
  <value>
    <factionNameMaker>HHTools_FactionNameMaker_Raider</factionNameMaker>
  </value>
</Operation>
</Patch>