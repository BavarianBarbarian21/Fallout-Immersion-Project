<Defs>
    <!--American, Bear, Bull, Cascadia, Nuevo Texico-->
    <!--American-->
    <CultureDef Name="HHTools_Culture_American">
        <defName>HHTools_Culture_American</defName>
        <label>American</label>
        <description>Culture originating from the pre-war United States.</description>
        <ideoNameMaker MayRequire="FIP.Arktos">NamerIdeoGlobal</ideoNameMaker>
        <deityNameMaker MayRequire="FIP.Arktos">NamerDeityAstropolitan</deityNameMaker>
        <deityTypeMaker MayRequire="FIP.Arktos">DeityTypeMakerAstropolitan</deityTypeMaker>
        <leaderTitleMaker MayRequire="FIP.Arktos">LeaderTitleMaker_Astropolitan</leaderTitleMaker>
        <festivalNameMaker MayRequire="FIP.Arktos">NamerFestivalGlobal</festivalNameMaker>
        <pawnNameMaker>HHTools_PawnNameMaker_American_Male</pawnNameMaker>
        <pawnNameMakerFemale>HHTools_PawnNameMaker_American_Female</pawnNameMakerFemale>
        <allowedPlaceTags>
            <li>OriginAmerican</li>
        </allowedPlaceTags>
        <iconPath>HHTools/HHTools_American</iconPath>
        <styleItemTags>
            <li>
                <tag>Urban</tag>
                <baseWeight>1</baseWeight>
                <weightFactor>1</weightFactor>
            </li>
            <li>
                <tag>Rural</tag>
                <baseWeight>1</baseWeight>
                <weightFactor>1</weightFactor>
            </li>
            <li>
                <tag>NoBeard</tag>
                <baseWeight>10</baseWeight>
                <weightFactor>1</weightFactor>
            </li>
            <li>
                <tag>BeardUrban</tag>
                <baseWeight>0</baseWeight>
                <weightFactor>1</weightFactor>
            </li>
            <li>
                <tag>BeardRural</tag>
                <baseWeight>0</baseWeight>
                <weightFactor>1</weightFactor>
            </li>
            <li>
                <tag>MoustacheOnly</tag>
                <baseWeight>0.15</baseWeight>
                <weightFactor>1</weightFactor>
            </li>
            <li>
                <tag>NoTattoo</tag>
                <baseWeight>1</baseWeight>
                <weightFactor>1</weightFactor>
            </li>
        </styleItemTags>
    </CultureDef>

