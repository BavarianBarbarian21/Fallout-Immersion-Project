<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <FactionDef ParentName="FactionBase" Name="HHTools_Factionbase" Abstract="True">
    <defName>HHTools_Factionbase</defName>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <techLevel>Industrial</techLevel>
    <settlementNameMaker>HHTools_SettlementNameMaker_General</settlementNameMaker>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
    <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(800, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>

  </FactionDef>


  <!-- Democratic/Despotic -->
  <FactionDef ParentName="HHTools_Factionbase" Name="HHTools_Settler_Democratic" Abstract="True">
    <defName>HHTools_Settler_Democratic</defName>
    <pawnSingular>settler</pawnSingular>
    <pawnsPlural>settlers</pawnsPlural>
    <categoryTag>Outlander</categoryTag>
    <leaderTitle>overseer</leaderTitle>
    <factionIconPath>HHTools/HHTools_Democracy</factionIconPath>
    <structureMemeWeights>
      <Arktos_Religion_ChildrenOfAtom MayRequire="FIP.Arktos">1</Arktos_Religion_ChildrenOfAtom>
      <Arktos_Religion_ChildrenOfTheCathedral MayRequire="FIP.Arktos">1</Arktos_Religion_ChildrenOfTheCathedral>
      <Arktos_Religion_Hubology MayRequire="FIP.Arktos">2</Arktos_Religion_Hubology>
      <Arktos_Religion_CanaaniteChurch MayRequire="FIP.Arktos">2</Arktos_Religion_CanaaniteChurch>
      <Arktos_Religion_AbbeyOfTheRoad MayRequire="FIP.Arktos">4</Arktos_Religion_AbbeyOfTheRoad>
      <Arktos_Religion_OrderOfOurLadyOfTheWaters MayRequire="FIP.Arktos">4</Arktos_Religion_OrderOfOurLadyOfTheWaters>
      <Arktos_Religion_FollowerOfTheApocalypse MayRequire="FIP.Arktos">4</Arktos_Religion_FollowerOfTheApocalypse>
      <Arktos_Religion_Karma MayRequire="FIP.Arktos">1</Arktos_Religion_Karma>
      <Arktos_Religion_Shi MayRequire="FIP.Arktos">1</Arktos_Religion_Shi>
    </structureMemeWeights>
    <backstoryFilters>
      <li>
        <categories>
          <li>Outlander</li>
        </categories>
      </li>
    </backstoryFilters>
    <caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
      <li>Caravan_Outlander_PirateMerchant</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Outlander_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>
    <raidLootMaker>OutlanderRaidLootMaker</raidLootMaker>
    <pawnGroupMakers>
      <li>
        <!-- Normal fights, standard mix -->
        <kindDef>Combat</kindDef>
        <options>
          <Villager>5</Villager>
          <Town_Guard>10</Town_Guard>
          <Grenadier_Destructive>1.5</Grenadier_Destructive>
          <Mercenary_Slasher>7</Mercenary_Slasher>
          <Mercenary_Gunner>10</Mercenary_Gunner>
          <Mercenary_Elite>10</Mercenary_Elite>
          <Town_Councilman>10</Town_Councilman>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <Villager>20</Villager>
          <Villager_Child MayRequire="FIP.WestTek">10</Villager_Child>
          <Town_Guard>10</Town_Guard>
          <Town_Councilman>10</Town_Councilman>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Town_Trader>1</Town_Trader>
        </traders>
        <carriers>
          <Muffalo>6</Muffalo>
          <Dromedary>5</Dromedary>
          <Alpaca>2</Alpaca>
          <Elephant>1</Elephant>
        </carriers>
        <guards>
          <Villager>3</Villager>
          <Town_Guard>10</Town_Guard>
          <Grenadier_Destructive>1.5</Grenadier_Destructive>
          <Mercenary_Slasher>7</Mercenary_Slasher>
          <Mercenary_Gunner>10</Mercenary_Gunner>
          <Mercenary_Elite>10</Mercenary_Elite>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <Villager>10</Villager>
          <Town_Guard>10</Town_Guard>
          <Grenadier_Destructive>1.5</Grenadier_Destructive>
          <Mercenary_Slasher>7</Mercenary_Slasher>
          <Mercenary_Gunner>10</Mercenary_Gunner>
          <Mercenary_Elite>10</Mercenary_Elite>
          <Town_Councilman>10</Town_Councilman>
        </options>
      </li>
      <li MayRequire="FIP.Arktos">
        <kindDef>Miners</kindDef>
        <commonality>1</commonality>
        <options>
          <Miner>1</Miner>
        </options>
      </li>
      <li MayRequire="FIP.Arktos">
        <kindDef>Hunters</kindDef>
        <commonality>1</commonality>
        <options>
          <Hunter>1</Hunter>
        </options>
      </li>
      <li MayRequire="FIP.Arktos">
        <kindDef>Loggers</kindDef>
        <commonality>1</commonality>
        <options>
          <Logger>1</Logger>
        </options>
      </li>
      <li MayRequire="FIP.Arktos">
        <kindDef>Farmers</kindDef>
        <commonality>1</commonality>
        <options>
          <Farmer>1</Farmer>
        </options>
      </li>
    </pawnGroupMakers>
    <!--Gentile/Democratic-->
    <factionNameMaker>HHTools_FactionNameMaker_Democratic</factionNameMaker>
    <classicIdeo>true</classicIdeo>
    <colorSpectrum>
      <li>(0.35, 0.30, 0.60)</li>
      <li>(0.45, 0.40, 0.90)</li>
    </colorSpectrum>
    <configurationListOrderPriority>6</configurationListOrderPriority>
    <listOrderPriority>6</listOrderPriority>
  </FactionDef>
  <!--Rough/Despotic-->
  <FactionDef ParentName="HHTools_Settler_Democratic" Name="HHTools_Settler_Despotic" Abstract="True">
    <defName>HHTools_Settler_Despotic</defName>
    <factionNameMaker>HHTools_FactionNameMaker_Despotic</factionNameMaker>
    <classicIdeo>true</classicIdeo>
    <naturalEnemy>true</naturalEnemy>
    <colorSpectrum Inherit="False">
      <li>(0.8, 0.6, 0.05)</li>
      <li>(1, 0.85, 0.1)</li>
    </colorSpectrum>
    <configurationListOrderPriority>7</configurationListOrderPriority>
    <listOrderPriority>7</listOrderPriority>
    <factionIconPath>HHTools/HHTools_Despotic</factionIconPath>
    <structureMemeWeights>
      <Arktos_Religion_ChildrenOfAtom MayRequire="FIP.Arktos">4</Arktos_Religion_ChildrenOfAtom>
      <Arktos_Religion_ChildrenOfTheCathedral MayRequire="FIP.Arktos">3</Arktos_Religion_ChildrenOfTheCathedral>
      <Arktos_Religion_Hubology MayRequire="FIP.Arktos">3</Arktos_Religion_Hubology>
      <Arktos_Religion_CanaaniteChurch MayRequire="FIP.Arktos">1</Arktos_Religion_CanaaniteChurch>
      <Arktos_Religion_AbbeyOfTheRoad MayRequire="FIP.Arktos">1</Arktos_Religion_AbbeyOfTheRoad>
      <Arktos_Religion_OrderOfOurLadyOfTheWaters MayRequire="FIP.Arktos">1</Arktos_Religion_OrderOfOurLadyOfTheWaters>
      <Arktos_Religion_Karma MayRequire="FIP.Arktos">1</Arktos_Religion_Karma>
      <Arktos_Religion_Shi MayRequire="FIP.Arktos">3</Arktos_Religion_Shi>
    </structureMemeWeights>
  </FactionDef>

  <!-- Raider -->
  <FactionDef ParentName="HHTools_Factionbase" Name="HHTools_Raider" Abstract="True">
    <defName>HHTools_Raider</defName>
    <pawnSingular>raider</pawnSingular>
    <pawnsPlural>raiders</pawnsPlural>
    <configurationListOrderPriority>8</configurationListOrderPriority>
    <listOrderPriority>8</listOrderPriority>
    <leaderTitle>warlord</leaderTitle>
    <factionIconPath>HHTools/HHTools_Raider</factionIconPath>
    <factionNameMaker>HHTools_FactionNameMaker_Raider</factionNameMaker>
    <permanentEnemy>true</permanentEnemy>
    <requiredMemes>
      <li MayRequire="FIP.Arktos">Raider</li>
    </requiredMemes>
    <structureMemeWeights>
      <Arktos_Religion_ChildrenOfAtom MayRequire="FIP.Arktos">4</Arktos_Religion_ChildrenOfAtom>
      <Arktos_Religion_ChildrenOfTheCathedral MayRequire="FIP.Arktos">1</Arktos_Religion_ChildrenOfTheCathedral>
      <Arktos_Religion_ChildrenOfKrvibi MayRequire="FIP.Arktos">1</Arktos_Religion_ChildrenOfKrvibi>
      <Arktos_Religion_Hubology MayRequire="FIP.Arktos">2</Arktos_Religion_Hubology>
      <Arktos_Religion_Syncretic MayRequire="FIP.Arktos">2</Arktos_Religion_Syncretic>
      <Arktos_Religion_Shi MayRequire="FIP.Arktos">2</Arktos_Religion_Shi>
    </structureMemeWeights>
    <backstoryFilters>
      <li>
        <categories>
          <li>Pirate</li>
        </categories>
      </li>
    </backstoryFilters>
    <raidLootMaker>PirateRaidLootMaker</raidLootMaker>
    <colorSpectrum>
      <li>(0.7, 0.1, 0.1)</li>
      <li>(0.9, 0.3, 0.3)</li>
    </colorSpectrum>
    <pawnGroupMakers>
      <li>
        <!-- Normal fights, ranged with melee mix-ins -->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <Drifter>10</Drifter>
          <Thrasher>3</Thrasher>
          <Scavenger>10</Scavenger>
          <Pirate>10</Pirate>
          <Grenadier_EMP>0.25</Grenadier_EMP>
          <Grenadier_Smoke>0.25</Grenadier_Smoke>
          <Grenadier_Destructive>2</Grenadier_Destructive>
          <Mercenary_Gunner>10</Mercenary_Gunner>
          <Mercenary_Heavy>6</Mercenary_Heavy>
          <Mercenary_Slasher>3</Mercenary_Slasher>
          <Mercenary_Sniper>7</Mercenary_Sniper>
          <Mercenary_Elite>10</Mercenary_Elite>
          <PirateBoss>5</PirateBoss>
        </options>
      </li>
      <li>
        <!-- Normal fights, melee-only -->
        <kindDef>Combat</kindDef>
        <commonality>30</commonality>
        <disallowedStrategies>
          <li>Siege</li>
        </disallowedStrategies>
        <options>
          <Thrasher>10</Thrasher>
          <Mercenary_Slasher>10</Mercenary_Slasher>
          <PirateBoss>5</PirateBoss>
        </options>
      </li>
      <li>
        <!-- Normal fights, ranged only -->
        <kindDef>Combat</kindDef>
        <commonality>20</commonality>
        <options>
          <Scavenger>10</Scavenger>
          <Pirate>10</Pirate>
          <Grenadier_EMP>0.25</Grenadier_EMP>
          <Grenadier_Smoke>0.25</Grenadier_Smoke>
          <Grenadier_Destructive>2</Grenadier_Destructive>
          <Mercenary_Gunner>10</Mercenary_Gunner>
          <Mercenary_Heavy>6</Mercenary_Heavy>
          <Mercenary_Sniper>7</Mercenary_Sniper>
          <Mercenary_Elite>10</Mercenary_Elite>
          <PirateBoss>5</PirateBoss>
        </options>
      </li>
      <li>
        <!-- Normal fights, explosives with ranged mix-ins -->
        <kindDef>Combat</kindDef>
        <commonality>15</commonality>
        <disallowedStrategies>
          <li>Siege</li>
        </disallowedStrategies>
        <options>
          <Grenadier_EMP>0.5</Grenadier_EMP>
          <Grenadier_Smoke>0.5</Grenadier_Smoke>
          <Grenadier_Destructive>10</Grenadier_Destructive>
          <Mercenary_Gunner>1</Mercenary_Gunner>
          <Mercenary_Heavy>10</Mercenary_Heavy>
          <Mercenary_Elite>1</Mercenary_Elite>
          <PirateBoss>1</PirateBoss>
        </options>
      </li>
      <li>
        <!-- Normal fights, snipers only -->
        <kindDef>Combat</kindDef>
        <commonality>10</commonality>
        <options>
          <Mercenary_Sniper>10</Mercenary_Sniper>
        </options>
      </li>
      <li>
        <!-- Normal fights, drifters only (very rare) -->
        <kindDef>Combat</kindDef>
        <commonality>2.5</commonality>
        <maxTotalPoints>1000</maxTotalPoints>
        <options>
          <Drifter>10</Drifter>
        </options>
      </li>
      <li>
        <!-- Base defense, mainly ranged with melee mix-ins -->
        <kindDef>Settlement</kindDef>
        <options>
          <Thrasher>3</Thrasher>
          <Pirate>10</Pirate>
          <Grenadier_Destructive>2</Grenadier_Destructive>
          <Mercenary_Slasher>3</Mercenary_Slasher>
          <Mercenary_Sniper>10</Mercenary_Sniper>
          <Mercenary_Gunner>10</Mercenary_Gunner>
          <Mercenary_Elite>10</Mercenary_Elite>
          <PirateBoss>10</PirateBoss>
        </options>
      </li>
    </pawnGroupMakers>
    <!--Global-->
    <label>wasteland raider gang</label>
    <description>Ruthless scavengers and murderers who live for the thrill of domination. They often mark their armor with blood and chems, worshiping violence as the only truth.</description>
  </FactionDef>

  <!-- Tribal -->
  <FactionDef ParentName="HHTools_Factionbase" Name="FalloutTribalClan" Abstract="True">
    <defName>FalloutTribalClan</defName>
    <pawnSingular>tribal</pawnSingular>
    <pawnsPlural>tribals</pawnsPlural>
    <categoryTag>Tribal</categoryTag>
    <leaderTitle>chief</leaderTitle>
    <factionIconPath>HHTools/HHTools_Tribal</factionIconPath>
    <techLevel>Neolithic</techLevel>
    <configurationListOrderPriority>9</configurationListOrderPriority>
    <listOrderPriority>9</listOrderPriority>
    <factionNameMaker>HHTools_FactionNameMaker_Tribal</factionNameMaker>
    <structureMemeWeights>
      <Arktos_Religion_ChildrenOfAtom MayRequire="FIP.Arktos">1</Arktos_Religion_ChildrenOfAtom>
      <Arktos_Religion_ChildrenOfKrvibi MayRequire="FIP.Arktos">2</Arktos_Religion_ChildrenOfKrvibi>
      <Arktos_Religion_Syncretic MayRequire="FIP.Arktos">5</Arktos_Religion_Syncretic>
      <Arktos_Religion_Karma MayRequire="FIP.Arktos">2</Arktos_Religion_Karma>
      <Arktos_Religion_Native MayRequire="FIP.Arktos">5</Arktos_Religion_Native>
    </structureMemeWeights>
    <backstoryFilters>
      <li>
        <categories>
          <li>Tribal</li>
        </categories>
      </li>
    </backstoryFilters>
    <raidLootMaker>TribeRaidLootMaker</raidLootMaker>
    <colorSpectrum>
      <li>(0.3, 0.6, 0.2)</li>
      <li>(0.6, 0.9, 0.4)</li>
    </colorSpectrum>
    <caravanTraderKinds>
      <li>Caravan_Neolithic_BulkGoods</li>
      <li>Caravan_Neolithic_WarMerchant</li>
      <li>Caravan_Neolithic_Slaver</li>
      <li>Caravan_Neolithic_ShamanMerchant</li>
    </caravanTraderKinds>
    <visitorTraderKinds>
      <li>Visitor_Neolithic_Standard</li>
    </visitorTraderKinds>
    <baseTraderKinds>
      <li>Base_Neolithic_Standard</li>
    </baseTraderKinds>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(0, 1)</li>        <!--Constant 1 at all points levels-->
      </points>
    </raidCommonalityFromPointsCurve>
    <pawnGroupMakers>
      <li>
        <!-- Normal fights, ranged with melee mix-ins -->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <Tribal_Penitent>5</Tribal_Penitent>
          <Tribal_Warrior>5</Tribal_Warrior>
          <Tribal_Archer>10</Tribal_Archer>
          <Tribal_Hunter>10</Tribal_Hunter>
          <Tribal_HeavyArcher>10</Tribal_HeavyArcher>
          <Tribal_Berserker>5</Tribal_Berserker>
        </options>
      </li>
      <li>
        <!-- Normal fights, ranged only -->
        <kindDef>Combat</kindDef>
        <commonality>60</commonality>
        <options>
          <Tribal_Archer>10</Tribal_Archer>
          <Tribal_Hunter>10</Tribal_Hunter>
          <Tribal_HeavyArcher>10</Tribal_HeavyArcher>
        </options>
      </li>
      <li>
        <!-- Normal fights, melee only -->
        <kindDef>Combat</kindDef>
        <commonality>60</commonality>
        <options>
          <Tribal_Penitent>10</Tribal_Penitent>
          <Tribal_Warrior>10</Tribal_Warrior>
          <Tribal_Berserker>10</Tribal_Berserker>
        </options>
      </li>
      <li>
        <!-- breach-capable fights, breachers plus ranged with melee mix-ins -->
        <kindDef>Combat</kindDef>
        <commonality>5</commonality>
        <options>
          <Tribal_Breacher>5</Tribal_Breacher>
          <Tribal_Penitent>5</Tribal_Penitent>
          <Tribal_Warrior>5</Tribal_Warrior>
          <Tribal_Archer>10</Tribal_Archer>
          <Tribal_Hunter>10</Tribal_Hunter>
          <Tribal_HeavyArcher>10</Tribal_HeavyArcher>
          <Tribal_Berserker>5</Tribal_Berserker>
          <HHTools_TribalChiefRanged>3</HHTools_TribalChiefRanged>
          <HHTools_TribalChiefRanged>1.5</HHTools_TribalChiefRanged>
        </options>
      </li>
      <li>
        <!-- Peaceful -->
        <kindDef>Peaceful</kindDef>
        <options>
          <Tribal_Warrior>20</Tribal_Warrior>
          <Tribal_Child MayRequire="FIP.WestTek">10</Tribal_Child>
          <Tribal_Archer>10</Tribal_Archer>
          <Tribal_Hunter>10</Tribal_Hunter>
          <Tribal_HeavyArcher>10</Tribal_HeavyArcher>
          <Tribal_Berserker>5</Tribal_Berserker>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Tribal_Trader>1</Tribal_Trader>
        </traders>
        <carriers>
          <Muffalo>6</Muffalo>
          <Dromedary>5</Dromedary>
          <Alpaca>2.5</Alpaca>
          <Elephant>2</Elephant>
        </carriers>
        <guards>
          <Tribal_Warrior>7</Tribal_Warrior>
          <Tribal_Archer>10</Tribal_Archer>
          <Tribal_Hunter>10</Tribal_Hunter>
          <Tribal_HeavyArcher>10</Tribal_HeavyArcher>
          <Tribal_Berserker>7</Tribal_Berserker>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <Tribal_Warrior>7</Tribal_Warrior>
          <Tribal_Archer>10</Tribal_Archer>
          <Tribal_Hunter>10</Tribal_Hunter>
          <Tribal_HeavyArcher>10</Tribal_HeavyArcher>
          <Tribal_Berserker>7</Tribal_Berserker>
        </options>
      </li>
      <li>
        <kindDef>Settlement_RangedOnly</kindDef>
        <options>
          <Tribal_Archer>10</Tribal_Archer>
          <Tribal_Hunter>10</Tribal_Hunter>
          <Tribal_HeavyArcher>10</Tribal_HeavyArcher>
        </options>
      </li>
      <li MayRequire="FIP.Arktos">
        <kindDef>Miners</kindDef>
        <commonality>1</commonality>
        <options>
          <Tribal_Miner>1</Tribal_Miner>
        </options>
      </li>
      <li MayRequire="FIP.Arktos">
        <kindDef>Hunters</kindDef>
        <commonality>1</commonality>
        <options>
          <Tribal_Hunter>1</Tribal_Hunter>
        </options>
      </li>
      <li MayRequire="FIP.Arktos">
        <kindDef>Loggers</kindDef>
        <commonality>1</commonality>
        <options>
          <Tribal_Logger>1</Tribal_Logger>
        </options>
      </li>
      <li MayRequire="FIP.Arktos">
        <kindDef>Farmers</kindDef>
        <commonality>1</commonality>
        <options>
          <Tribal_Farmer>1</Tribal_Farmer>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/TribalSettlement</settlementTexturePath>
    <!--Global-->
    <label>wasteland tribe</label>
    <description>Descendants of vault dwellers or surface survivors who abandoned technology generations ago. They worship spirits of the old world and wield makeshift weapons crafted from scrap and bone.</description>
  </FactionDef>

</Defs>