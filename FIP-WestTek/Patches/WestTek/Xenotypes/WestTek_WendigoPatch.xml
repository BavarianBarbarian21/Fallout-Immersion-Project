<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!--+6-->
  <!-- Patch Sanguophages xenotype label to Wendigo -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/XenotypeDef[defName="Sanguophage"]/label</xpath>
    <value>
      <label>Wendigo</label>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/XenotypeDef[defName="Sanguophage"]/description</xpath>
    <value>
      <description>Once human, now cursed by hunger and cold, the Wendigo are vampiric remnants of
        the old worldâ€™s darkest corners. Their bodies are gaunt, their skin pale as frost, their
        eyes burning with feral hunger. They feed on blood and flesh not by choice, but by the
        whisper of something ancient and terrible that will not let them die.</description>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/XenotypeDef[defName="Sanguophage"]/descriptionShort</xpath>
    <value>
      <descriptionShort>Predators of the night who feast upon the flesh of the living to stave off
        decay.</descriptionShort>
    </value>
  </Operation>

  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationRemove">
        <xpath>Defs/XenotypeDef[defName="Sanguophage"]/genes/li[text()="MoveSpeed_Quick"]</xpath>
      </li>
      <li Class="PatchOperationRemove">
        <xpath>Defs/XenotypeDef[defName="Sanguophage"]/genes/li[text()="UVSensitivity_Mild"]</xpath>
      </li>
      <li Class="PatchOperationRemove">
        <xpath>Defs/XenotypeDef[defName="Sanguophage"]/genes/li[text()="Aggression_Aggressive"]</xpath>
      </li>
    </operations>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/XenotypeDef[defName="Sanguophage"]/genes</xpath>
    <value>
      <li>MoveSpeed_VeryQuick</li>
      <li>Mood_Pessimist</li>
      <li>UVSensitivity_Intense</li>
      <li>Aggression_HyperAggressive</li>
      <li>KillThirst</li>

      <li>WestTek_Gene_Wendigo</li>
    </value>
  </Operation>

</Patch>