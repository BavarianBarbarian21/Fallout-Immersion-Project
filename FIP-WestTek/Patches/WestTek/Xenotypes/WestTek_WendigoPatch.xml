<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!--+6-->
  <!-- Patch Sanguophages xenotype label to Wendigo -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/XenotypeDef[defName="Sanguophage"]/label</xpath>
    <value>
      <label>Wendigo</label>
    </value>
  </Operation>

    <Operation Class="PatchOperationRemove">
    <xpath>Defs/XenotypeDef[defName="Sanguophage"]/genes</xpath>
    <value>
        <li>MoveSpeed_Quick</li>
        <li>UVSensitivity_Mild</li>
        <li>Aggression_Aggressive</li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/XenotypeDef[defName="Sanguophage"]/genes</xpath>
    <value>
        <li>MoveSpeed_VeryQuick</li>
        <li>Mood_Pessimist</li>
        <li>UVSensitivity_Intense</li>
        <li>Aggression_HyperAggressive</li>
        <li>KillThirst</li>
    </value>
  </Operation>

</Patch>