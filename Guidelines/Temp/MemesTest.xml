  <!-- DLC: Ideology - Structures & Misc (transformed labels/descriptions for Arktos) -->

  <MemeDef>
    <defName>Structure_Animist</defName>
    <label>Arktos: tribal spirit-worship</label>
    <description>In the irradiated wastes, the old world's spirits were reborn in wreckage and ruins; the faithful read omens in busted radios, glowing fungi, and broken power cores.</description>
    <category>Structure</category>
    <iconPath>UI/Structures/Animist</iconPath>
    <impact>0</impact>
    <worshipRoomLabel>temple</worshipRoomLabel>
    <randomizationSelectionWeightFactor>2</randomizationSelectionWeightFactor>
    <deityCount>0</deityCount>
    <generalRules>
      <rulesStrings>
        <li>memeLeaderNoun->curate</li>
        <li>memeLeaderNoun->speaker</li>
        <li>memeLeaderAdjective->universe</li>
        <li>memeLeaderAdjective->spirit</li>
        <li>memeLeaderAdjective->anima</li>
        <li>memeHyphenPrefix->ani</li>
        <li>memeMoralist->shaman</li>
        <li>memeMoralist->priest</li>
        <li>memeMoralist->elder</li>
      </rulesStrings>
    </generalRules>
    <descriptionMaker>
      <patterns>
        <li><def>AnimistDescription</def></li>
      </patterns>
      <constants>
        <li><key>structure_animist</key><value>true</value></li>
      </constants>
    </descriptionMaker>
    <symbolPacks>
      <li>
        <theme>animism</theme>
        <adjective>animist</adjective>
        <member>animist</member>
      </li>
      <li>
        <theme>spiritism</theme>
        <adjective>spiritist</adjective>
        <member>spiritist</member>
      </li>
    </symbolPacks>
    <thingStyleCategories>
      <li>
        <category>Animalist</category>
        <priority>1</priority>
      </li>
    </thingStyleCategories>
  </MemeDef>

